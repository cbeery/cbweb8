<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Edit Bicycle</h1>
    <p class="text-gray-600 mt-2">Update details for <%= @bicycle.name %></p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= render 'form', bicycle: @bicycle %>
  </div>

  <div class="mt-4">
    <%= link_to "← Back to #{@bicycle.name}", admin_bike_bicycles_path(@bicycle), 
                class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
