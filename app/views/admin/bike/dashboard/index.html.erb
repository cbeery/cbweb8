<%# app/views/admin/bike/dashboard/index.html.erb %>
<% content_for :title, "Bike Dashboard" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Bike Dashboard</h1>
    <p class="mt-2 text-gray-600">Track your rides, bikes, and cycling statistics</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Total Rides</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@total_rides) %></dd>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Total Distance</dt>
      <dd class="mt-1 text-2xl font-semibold text-green-600">
        <%= number_with_delimiter(@total_distance.round) %> mi
      </dd>
      <p class="text-sm text-gray-500">
        <%= number_with_delimiter((@total_distance * 1.60934).round) %> km
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate"><%= @current_year %> Rides</dt>
      <dd class="mt-1 text-2xl font-semibold text-blue-600"><%= @year_rides %></dd>
      <p class="text-sm text-gray-500">
        <%= number_with_delimiter(@year_distance.round) %> miles
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">This Month</dt>
      <dd class="mt-1 text-2xl font-semibold text-purple-600"><%= @month_rides %> rides</dd>
      <p class="text-sm text-gray-500">
        <%= number_with_delimiter(@month_distance.round) %> miles
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Active Bikes</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        <%= @active_bicycles %> / <%= @total_bicycles %>
      </dd>
    </div>
  </div>

  <!-- Navigation Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <%= link_to admin_bike_rides_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">View Rides</dt>
            <dd class="text-2xl font-semibold text-gray-900">Browse all rides →</dd>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= link_to admin_bike_bicycles_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Manage Bikes</dt>
            <dd class="text-2xl font-semibold text-gray-900">Bicycle fleet →</dd>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= link_to admin_bike_milestones_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Milestones</dt>
            <dd class="text-2xl font-semibold text-gray-900">Track goals →</dd>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= link_to admin_bike_strava_activities_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-orange-100 rounded-lg p-2">
            <!-- Strava-style icon -->
            <svg class="h-6 w-6 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Strava Sync</dt>
            <dd class="text-2xl font-semibold text-gray-900">Import activities →</dd>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Two Column Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Recent Rides (2/3 width) -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Recent Rides</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bike</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Distance</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Speed</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_rides.each do |ride| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= ride.ride_date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= ride.bicycle&.name || "—" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_with_precision(ride.distance_miles, precision: 1) %> mi
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= distance_of_time_in_words(ride.duration_seconds) if ride.duration_seconds %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if ride.average_speed %>
                      <%= number_with_precision(ride.average_speed, precision: 1) %> mph
                    <% else %>
                      —
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="px-6 py-3 border-t border-gray-200">
          <%= link_to "View all rides →", admin_bike_rides_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      </div>
    </div>

    <!-- Sidebar (1/3 width) -->
    <div class="space-y-6">
      <!-- Bike Stats -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Bike Usage</h3>
        <div class="space-y-3">
          <% @bike_stats.each do |bike| %>
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= bike.name %></p>
                <p class="text-xs text-gray-500">
                  <%= bike.ride_count %> rides • <%= number_with_delimiter(bike.total_miles.to_i) %> mi
                </p>
              </div>
              <div class="text-right">
                <p class="text-xs text-gray-500">
                  <%= bike.last_ride_date&.strftime("%b %d") || "Never" %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Upcoming Milestones -->
      <% if @upcoming_milestones.any? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Upcoming Milestones</h3>
          <div class="space-y-3">
            <% @upcoming_milestones.each do |milestone| %>
              <div class="flex justify-between items-start">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= milestone.name %></p>
                  <p class="text-xs text-gray-500">
                    <%= milestone.target_date&.strftime("%b %d, %Y") || "No date set" %>
                  </p>
                </div>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <%= milestone.status %>
                </span>
              </div>
            <% end %>
          </div>
          <%= link_to "View all →", admin_bike_milestones_path, class: "block mt-4 text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      <% end %>

      <!-- Last Strava Sync -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Strava Integration</h3>
        <% if @last_strava_sync %>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Last sync:</span>
              <span class="text-sm text-gray-900">
                <%= @last_strava_sync.created_at.strftime("%b %d, %I:%M %p") %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Status:</span>
              <span class="<%= @last_strava_sync.status == 'completed' ? 'text-green-600' : 'text-red-600' %> text-sm font-medium">
                <%= @last_strava_sync.status.capitalize %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-500">Activities:</span>
              <span class="text-sm text-gray-900">
                <%= @last_strava_sync.created_count %> new
              </span>
            </div>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No sync history</p>
        <% end %>
        
        <div class="mt-4">
          <%= button_to "Sync Now", 
              admin_syncs_path(source: 'strava'), 
              method: :post, 
              class: "w-full px-4 py-2 bg-orange-600 text-white text-sm font-medium rounded-md hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
        </div>
      </div>
    </div>
  </div>
</div>