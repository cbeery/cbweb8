<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">New Milestone</h1>
    <p class="text-gray-600 mt-2">Record a milestone or maintenance event</p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= render 'form', milestone: @milestone %>
  </div>

  <div class="mt-4">
    <%= link_to "← Back to Milestones", admin_milestones_path, 
                class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
