<%# app/views/admin/concert_artists/show.html.erb %>
<% content_for :title, @artist.name %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @artist.name %></h1>
        <p class="mt-2 text-sm text-gray-600">
          <%= pluralize(@stats[:total_concerts], 'concert') %> • 
          <%= pluralize(@stats[:venues_played], 'venue') %> • 
          <% if @stats[:first_show] %>
            Active <%= @stats[:first_show].year %> - <%= @stats[:last_show]&.year || 'present' %>
          <% end %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "All Artists", admin_concert_artists_path, 
            class: "px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "Filter Concerts", admin_concerts_path(artist_id: @artist.id), 
            class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700" %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Shows</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total_concerts] %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Venues Played</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:venues_played] %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">First Show</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900">
          <%= @stats[:first_show]&.strftime('%b %Y') || 'N/A' %>
        </dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Most Recent</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900">
          <%= @stats[:last_show]&.strftime('%b %Y') || 'N/A' %>
        </dd>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Concert History (2/3 width) -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Concert History</h3>
        </div>
        
        <% if @concerts.any? %>
          <ul class="divide-y divide-gray-200">
            <% @concerts.each do |concert| %>
              <li>
                <%= link_to admin_concert_path(concert), class: "block hover:bg-gray-50 px-6 py-4" do %>
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <div class="flex items-center">
                        <p class="text-sm font-medium text-indigo-600">
                          <%= concert.played_on&.strftime('%B %d, %Y') %>
                        </p>
                        <span class="ml-2 text-xs text-gray-500">
                          <%= time_ago_in_words(concert.played_on) %> ago
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-gray-900">
                        <%= concert.concert_venue&.display_name || "Venue TBD" %>
                      </p>
                      <% if concert.concert_artists.count > 1 %>
                        <p class="mt-1 text-xs text-gray-500">
                          with <%= (concert.concert_artists - [@artist]).map(&:name).join(', ') %>
                        </p>
                      <% end %>
                    </div>
                    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
          
          <div class="px-6 py-3 border-t border-gray-200">
            <%= paginate @concerts %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <p class="text-gray-500">No concerts found for this artist.</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Sidebar (1/3 width) -->
    <div class="space-y-6">
      <!-- Frequent Collaborators -->
      <% if @collaborators.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">Frequent Collaborators</h3>
          </div>
          <div class="px-6 py-4">
            <ul class="space-y-3">
              <% @collaborators.first(5).each do |collaborator| %>
                <li class="flex justify-between items-center">
                  <%= link_to collaborator.name, 
                      admin_concert_artist_path(collaborator),
                      class: "text-sm text-indigo-600 hover:text-indigo-900" %>
                  <span class="text-xs text-gray-500">
                    <%= pluralize(collaborator.shared_concerts, 'show') %>
                  </span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      
      <!-- Venues Breakdown -->
      <% if @venues_breakdown.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">Top Venues</h3>
          </div>
          <div class="px-6 py-4">
            <ul class="space-y-3">
              <% @venues_breakdown.first(5).each do |venue_data| %>
                <% venue_id, name, city, state, count = venue_data %>
                <li>
                  <div class="flex justify-between items-center">
                    <% if venue_id %>
                      <%= link_to admin_concert_venue_path(venue_id), 
                          class: "text-sm text-indigo-600 hover:text-indigo-900 flex-1" do %>
                        <div>
                          <span><%= name %></span>
                          <% if city.present? %>
                            <span class="text-xs text-gray-500 block"><%= city %>, <%= state %></span>
                          <% end %>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="text-sm text-gray-700 flex-1">
                        <span><%= name || "Unknown Venue" %></span>
                      </div>
                    <% end %>
                    <span class="text-xs text-gray-500 ml-2">
                      <%= pluralize(count, 'show') %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
            
            <% if @stats[:most_played_venue] %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-xs text-gray-500">
                  Most played: <span class="font-medium"><%= @stats[:most_played_venue][0] %></span>
                  (<%= pluralize(@stats[:most_played_venue][1], 'show') %>)
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>