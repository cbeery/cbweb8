<% content_for :title, @venue.display_name %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @venue.name %></h1>
        <p class="mt-1 text-lg text-gray-600">
          <%= @venue.location.presence || "Location not specified" %>
        </p>
        <p class="mt-2 text-sm text-gray-600">
          <%= pluralize(@stats[:total_concerts], 'concert') %> • 
          <%= pluralize(@stats[:total_artists], 'artist') %>
          <% if @stats[:first_show] %>
            • <%= @stats[:first_show].year %> - <%= @stats[:last_show].year %>
          <% end %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "All Venues", admin_concert_venues_path, 
            class: "px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "Filter Concerts", admin_concerts_path(venue_id: @venue.id), 
            class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700" %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Shows</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total_concerts] %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Artists</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total_artists] %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Busiest Year</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900">
          <% if @stats[:busiest_year] %>
            <%= @stats[:busiest_year][0].to_i %>
            <span class="text-sm text-gray-500">(<%= @stats[:busiest_year][1] %> shows)</span>
          <% else %>
            N/A
          <% end %>
        </dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Last Show</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900">
          <%= @stats[:last_show]&.strftime('%b %d, %Y') || 'N/A' %>
        </dd>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Concert History (2/3 width) -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Concert History</h3>
        </div>
        
        <% if @concerts.any? %>
          <ul class="divide-y divide-gray-200">
            <% @concerts.each do |concert| %>
              <li>
                <%= link_to admin_concert_path(concert), class: "block hover:bg-gray-50 px-6 py-4" do %>
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <div class="flex items-center">
                        <p class="text-sm font-medium text-indigo-600">
                          <%= concert.played_on&.strftime('%B %d, %Y') %>
                        </p>
                        <span class="ml-2 text-xs text-gray-500">
                          <%= concert.played_on.strftime('%A') %>
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-gray-900 font-medium">
                        <%= concert.concert_artists.map(&:name).join(', ') %>
                      </p>
                      <% if concert.notes.present? %>
                        <p class="mt-1 text-xs text-gray-500 line-clamp-1">
                          <%= concert.notes %>
                        </p>
                      <% end %>
                    </div>
                    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
          
          <div class="px-6 py-3 border-t border-gray-200">
            <%= paginate @concerts %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <p class="text-gray-500">No concerts found at this venue.</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Sidebar (1/3 width) -->
    <div class="space-y-6">
      <!-- Frequent Artists -->
      <% if @frequent_artists.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">Most Frequent Artists</h3>
          </div>
          <div class="px-6 py-4">
            <ul class="space-y-3">
              <% @frequent_artists.each do |artist| %>
                <li class="flex justify-between items-center">
                  <%= link_to artist.name, 
                      admin_concert_artist_path(artist),
                      class: "text-sm text-indigo-600 hover:text-indigo-900" %>
                  <span class="text-xs text-gray-500">
                    <%= pluralize(artist.venue_concerts, 'show') %>
                  </span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      
      <!-- Shows by Year -->
      <% if @concerts_by_year.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">Shows by Year</h3>
          </div>
          <div class="px-6 py-4">
            <ul class="space-y-2">
              <% @concerts_by_year.first(10).each do |year, count| %>
                <li class="flex justify-between items-center">
                  <span class="text-sm text-gray-900"><%= year.to_i %></span>
                  <div class="flex items-center">
                    <div class="w-24 bg-gray-200 rounded-full h-2 mr-2">
                      <div class="bg-indigo-600 h-2 rounded-full" 
                           style="width: <%= (count.to_f / @concerts_by_year.values.max * 100).round %>%"></div>
                    </div>
                    <span class="text-xs text-gray-500 w-8 text-right"><%= count %></span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>