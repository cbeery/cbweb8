<div data-artist-fields-target="fields" class="flex gap-2">
  <div class="flex-1" 
       data-controller="autocomplete"
       data-autocomplete-url-value="<%= search_artists_admin_concerts_path %>"
       data-autocomplete-create-new-value="true">
    
    <%= form.hidden_field :id %>
    <%= form.hidden_field :position %>
    <%= form.hidden_field :_destroy %>
    <%= form.hidden_field :concert_artist_id, data: { autocomplete_target: "hidden" } %>
    
    <div class="flex">
      <input type="text"
             placeholder="Type to search artists..."
             value="<%= form.object.concert_artist&.name %>"
             class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
             data-autocomplete-target="input"
             data-action="input->autocomplete#search keydown->autocomplete#navigate">
      
      <!-- Add New Artist Button -->
      <button type="button"
              class="ml-2 inline-flex items-center px-3 py-2 border border-indigo-600 text-sm leading-4 font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              title="Add new artist"
              data-action="click->autocomplete#showNewFields">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </button>
      
      <!-- Remove Button -->
      <button type="button"
              class="ml-2 inline-flex items-center px-3 py-2 border border-red-300 text-sm leading-4 font-medium rounded-md text-red-600 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
              title="Remove artist"
              data-action="click->artist-fields#remove">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- New Artist Field -->
    <div data-autocomplete-target="newFields" class="hidden mt-2 p-3 bg-gray-50 rounded-md">
      <label class="block text-sm font-medium text-gray-700 mb-1">New Artist Name</label>
      <input type="text" 
             name="concert[concert_performances_attributes][<%= form.index %>][new_artist_name]"
             placeholder="Enter artist name..."
             class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
    </div>
  </div>
</div>