<%= form_with model: [:admin, @concert], local: false do |form| %>
  
  <% if @concert.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@concert.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @concert.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Date Field -->
    <div>
      <%= form.label :played_on, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :played_on, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Venue Autocomplete -->
    <div>
      <%= form.label :concert_venue_id, "Venue", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1" data-controller="autocomplete"
           data-autocomplete-url-value="<%= search_venues_admin_concerts_path %>"
           data-autocomplete-create-new-value="true">
        
        <div class="relative flex">
          <%= form.hidden_field :concert_venue_id, data: { autocomplete_target: "hidden" } %>
          <input type="text"
                 placeholder="Type to search venues..."
                 value="<%= @concert.concert_venue&.display_name %>"
                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                 data-autocomplete-target="input"
                 data-action="input->autocomplete#search keydown->autocomplete#navigate">
          
          <!-- Add New Button -->
          <button type="button"
                  class="ml-2 inline-flex items-center px-3 py-2 border border-indigo-600 text-sm leading-4 font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                  data-action="click->autocomplete#showNewFields">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
        
        <!-- New Venue Fields -->
        <div data-autocomplete-target="newFields" class="hidden mt-3 p-4 bg-gray-50 rounded-md space-y-3">
          <h4 class="text-sm font-medium text-gray-900 mb-2">New Venue Details</h4>
          <div>
            <label class="block text-sm font-medium text-gray-700">Venue Name</label>
            <input type="text" 
                   name="concert[new_venue_name]"
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">City</label>
              <input type="text" 
                     name="concert[new_venue_city]"
                     class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">State</label>
              <input type="text" 
                     name="concert[new_venue_state]"
                     maxlength="2"
                     class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm uppercase" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Artists with Autocomplete -->
    <div data-controller="artist-fields">
      <div class="flex justify-between items-center mb-2">
        <label class="block text-sm font-medium text-gray-700">Artists</label>
        <button type="button"
                class="inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                data-action="click->artist-fields#add">
          <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Artist
        </button>
      </div>
      
      <div data-artist-fields-target="container" class="space-y-2">
        <%= form.fields_for :concert_performances do |perf_form| %>
          <%= render "artist_performance_field", form: perf_form %>
        <% end %>
      </div>
      
      <!-- Template for new fields -->
      <template data-artist-fields-target="template">
        <%= form.fields_for :concert_performances, ConcertPerformance.new, child_index: "NEW_RECORD" do |perf_form| %>
          <%= render "artist_performance_field", form: perf_form %>
        <% end %>
      </template>
    </div>

    <!-- Notes Field -->
    <div>
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :notes, 
          rows: 4,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Form Actions -->
    <div class="flex justify-end space-x-3 pt-6 border-t">
      <%= link_to "Cancel", admin_concerts_path, 
          class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>