<%= form_with model: [:admin, @concert], local: false do |form| %>
  <% if @concert.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@concert.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @concert.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Date Field -->
    <div>
      <%= form.label :played_on, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :played_on, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Venue Selection -->
    <div>
      <%= form.label :concert_venue_id, "Venue", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 flex space-x-2">
        <%= form.select :concert_venue_id,
            options_from_collection_for_select(ConcertVenue.alphabetical, :id, :display_name, @concert.concert_venue_id),
            { prompt: "Select a venue..." },
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            data: { 
              controller: "venue-select",
              action: "change->venue-select#toggle"
            } %>
        <button type="button" 
                data-venue-select-target="toggleBtn"
                class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          New
        </button>
      </div>
      
      <!-- New Venue Fields (hidden by default) -->
      <div data-venue-select-target="newFields" class="hidden mt-3 p-4 bg-gray-50 rounded-md space-y-3">
        <%= form.fields_for :concert_venue do |venue_form| %>
          <div>
            <%= venue_form.label :name, "Venue Name", class: "block text-sm font-medium text-gray-700" %>
            <%= venue_form.text_field :name, 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= venue_form.label :city, class: "block text-sm font-medium text-gray-700" %>
              <%= venue_form.text_field :city, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <div>
              <%= venue_form.label :state, class: "block text-sm font-medium text-gray-700" %>
              <%= venue_form.text_field :state, 
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Artists -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Artists</label>
      <div data-controller="nested-form" data-nested-form-wrapper-selector-value=".nested-fields">
        <div data-nested-form-target="container">
          <%= form.fields_for :concert_performances do |perf_form| %>
            <%= render 'concert_performance_fields', form: perf_form %>
          <% end %>
        </div>
        
        <button type="button"
                data-action="nested-form#add"
                class="mt-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Add Artist
        </button>
      </div>
    </div>

    <!-- Notes -->
    <div>
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :notes, 
          rows: 4,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Submit Buttons -->
    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", admin_concerts_path, 
          class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>