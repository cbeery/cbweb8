<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Concerts Dashboard</h1>
    <p class="mt-2 text-gray-600">Track concerts, artists, and venues</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Total Concerts</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_concerts %></dd>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Artists</dt>
      <dd class="mt-1 text-3xl font-semibold text-purple-600"><%= @total_artists %></dd>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Venues</dt>
      <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @total_venues %></dd>
    </div>
  </div>

  <!-- Navigation Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%= link_to admin_concerts_shows_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">View Concerts</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900"><%= @total_concerts %> Shows</div>
            </dd>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to admin_concerts_artists_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Manage Artists</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900"><%= @total_artists %> Artists</div>
            </dd>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to admin_concerts_venues_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Manage Venues</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900"><%= @total_venues %> Venues</div>
            </dd>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Recent Concerts -->
  <% if @recent_concerts.any? %>
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Concerts</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @recent_concerts.each do |concert| %>
          <li>
            <%= link_to admin_concerts_show_path(concert), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <p class="text-sm font-medium text-indigo-600 truncate">
                    <%= concert.concert_artists.map(&:name).join(', ') %>
                  </p>
                  <div class="ml-2 flex-shrink-0 flex">
                    <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                      <%= concert.played_on&.strftime('%b %d, %Y') %>
                    </p>
                  </div>
                </div>
                <div class="mt-2 sm:flex sm:justify-between">
                  <div class="sm:flex">
                    <p class="flex items-center text-sm text-gray-500">
                      <%= concert.concert_venue&.display_name %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Top Artists -->
  <% if @top_artists.any? %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Most Seen Artists</h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @top_artists.each do |artist| %>
          <li>
            <%= link_to admin_concerts_artist_path(artist), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6 flex items-center justify-between">
                <p class="text-sm font-medium text-gray-900"><%= artist.name %></p>
                <p class="text-sm text-gray-500"><%= artist.concert_count %> concerts</p>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
