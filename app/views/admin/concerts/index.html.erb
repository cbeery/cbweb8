<% content_for :title, "Concerts" %>

<div class="mb-6">
  <% if @filtered_artist || @filtered_venue %>
    <!-- Filter Header -->
    <div class="bg-indigo-50 border-l-4 border-indigo-400 p-4 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="ml-3">
            <p class="text-sm text-indigo-700">
              Showing concerts
              <% if @filtered_artist %>
                by <span class="font-semibold"><%= @filtered_artist.name %></span>
              <% end %>
              <% if @filtered_venue %>
                at <span class="font-semibold"><%= @filtered_venue.display_name %></span>
              <% end %>
            </p>
          </div>
        </div>
        <%= link_to "Clear Filter", admin_concerts_path, 
            class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium" %>
      </div>
    </div>
  <% end %>
  
  <!-- Page Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">
      <%= @filtered_artist ? "#{@filtered_artist.name} Concerts" : 
          @filtered_venue ? "Concerts at #{@filtered_venue.name}" : 
          "Concerts" %>
    </h1>
    <%= link_to "New Concert", new_admin_concert_path, 
        class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors",
        data: { turbo_frame: "_top" } %>
  </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <% if @concerts.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Artists</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Venue</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @concerts.each do |concert| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to concert.played_on&.strftime('%b %d, %Y'), 
                  admin_concert_path(concert),
                  class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <% concert.concert_artists.each_with_index do |artist, index| %>
                <%= link_to artist.name, 
                    admin_concerts_path(artist_id: artist.id),
                    class: "text-gray-700 hover:text-indigo-600 hover:underline" %>
                <%= ", " unless index == concert.concert_artists.size - 1 %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= link_to concert.concert_venue&.display_name,
                  admin_concerts_path(venue_id: concert.concert_venue&.id),
                  class: "text-gray-700 hover:text-indigo-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="px-6 py-3 border-t border-gray-200">
      <%= paginate @concerts %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No concerts found</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if @filtered_artist %>
          No concerts found for <%= @filtered_artist.name %>.
        <% elsif @filtered_venue %>
          No concerts found at <%= @filtered_venue.display_name %>.
        <% else %>
          Get started by creating a new concert.
        <% end %>
      </p>
      <div class="mt-6">
        <% if @filtered_artist || @filtered_venue %>
          <%= link_to "View all concerts", admin_concerts_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% else %>
          <%= link_to "New concert", new_admin_concert_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @filtered_artist && @concerts.any? %>
  <!-- Stats for filtered artist -->
  <div class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-6 py-5">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <%= @filtered_artist.name %> Stats
      </h3>
      <dl class="grid grid-cols-1 gap-5 sm:grid-cols-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Shows</dt>
          <dd class="mt-1 text-2xl font-semibold text-gray-900">
            <%= @filtered_artist.concerts.count %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Different Venues</dt>
          <dd class="mt-1 text-2xl font-semibold text-gray-900">
            <%= @filtered_artist.concerts.distinct.count(:concert_venue_id) %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">First Show</dt>
          <dd class="mt-1 text-xl font-semibold text-gray-900">
            <%= @filtered_artist.concerts.minimum(:played_on)&.strftime('%b %Y') || "N/A" %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
<% end %>

<% if @filtered_venue && @concerts.any? %>
  <!-- Stats for filtered venue -->
  <div class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-6 py-5">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <%= @filtered_venue.display_name %> Stats
      </h3>
      <dl class="grid grid-cols-1 gap-5 sm:grid-cols-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Shows</dt>
          <dd class="mt-1 text-2xl font-semibold text-gray-900">
            <%= @filtered_venue.concerts.count %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Different Artists</dt>
          <dd class="mt-1 text-2xl font-semibold text-gray-900">
            <%= @filtered_venue.concerts.joins(:concert_artists).distinct.count("concert_artists.id") %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Most Recent</dt>
          <dd class="mt-1 text-xl font-semibold text-gray-900">
            <%= @filtered_venue.concerts.maximum(:played_on)&.strftime('%b %d, %Y') || "N/A" %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
<% end %>