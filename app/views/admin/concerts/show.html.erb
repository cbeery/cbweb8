<!-- app/views/admin/concerts/show.html.erb -->
<% content_for :title, "Concert Details" %>

<div class="max-w-4xl mx-auto">
  <!-- Header with Actions -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">
        <%= @concert.played_on&.strftime('%B %d, %Y') %>
      </h1>
      <p class="mt-1 text-lg text-gray-600">
        <%= @concert.concert_venue&.display_name %>
      </p>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_admin_concert_path(@concert), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to "Delete", admin_concert_path(@concert),
          data: { 
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete this concert?"
          },
          class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      <%= link_to "Back to List", admin_concerts_path,
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
    </div>
  </div>

  <!-- Concert Details Card -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <!-- Date & Venue Section -->
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Concert Information
      </h3>
    </div>
    
    <div class="border-b border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @concert.played_on&.strftime('%A, %B %d, %Y') %>
            <span class="text-gray-500 text-xs ml-2">
              (<%= time_ago_in_words(@concert.played_on) %> ago)
            </span>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Venue</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <div class="font-medium"><%= @concert.concert_venue&.name %></div>
            <% if @concert.concert_venue&.location.present? %>
              <div class="text-gray-500"><%= @concert.concert_venue.location %></div>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Artists Section -->
    <div class="px-4 py-5 sm:px-6">
      <div class="mb-3">
        <h4 class="text-sm font-medium text-gray-500">Artists</h4>
      </div>
      
      <% if @concert.concert_performances.any? %>
        <ol class="space-y-3">
          <% @concert.concert_performances.includes(:concert_artist).order(:position).each_with_index do |performance, index| %>
            <li class="flex items-center">
              <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-indigo-100 text-indigo-600 text-sm font-medium rounded-full">
                <%= index + 1 %>
              </span>
              <span class="ml-3 text-gray-900">
                <%= performance.concert_artist&.name %>
              </span>
            </li>
          <% end %>
        </ol>
      <% else %>
        <p class="text-sm text-gray-500 italic">No artists listed for this concert</p>
      <% end %>
    </div>

    <!-- Notes Section -->
    <% if @concert.notes.present? %>
      <div class="bg-gray-50 px-4 py-5 sm:px-6">
        <div class="mb-2">
          <h4 class="text-sm font-medium text-gray-500">Notes</h4>
        </div>
        <div class="text-sm text-gray-900 whitespace-pre-wrap"><%= @concert.notes %></div>
      </div>
    <% end %>

    <!-- Metadata Footer -->
    <div class="bg-gray-50 px-4 py-4 sm:px-6 border-t border-gray-200">
      <div class="text-xs text-gray-500 space-y-1">
        <div>
          Created: <%= @concert.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        </div>
        <% if @concert.updated_at != @concert.created_at %>
          <div>
            Last updated: <%= @concert.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Related Information -->
  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- More concerts at this venue -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-900">
          More at <%= @concert.concert_venue&.name %>
        </h3>
      </div>
      <div class="px-4 py-5 sm:px-6">
        <% other_concerts = Concert.where(concert_venue: @concert.concert_venue)
                                   .where.not(id: @concert.id)
                                   .order(played_on: :desc)
                                   .limit(5) %>
        <% if other_concerts.any? %>
          <ul class="space-y-2">
            <% other_concerts.each do |concert| %>
              <li>
                <%= link_to admin_concert_path(concert), 
                    class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                  <%= concert.played_on&.strftime('%b %d, %Y') %>
                  <% if concert.concert_artists.any? %>
                    <span class="text-gray-500">- <%= concert.concert_artists.first.name %><%= " +" if concert.concert_artists.count > 1 %></span>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm text-gray-500 italic">No other concerts at this venue</p>
        <% end %>
      </div>
    </div>

    <!-- Recent concerts by these artists -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-900">
          Recent Artist Performances
        </h3>
      </div>
      <div class="px-4 py-5 sm:px-6">
        <% artist_concerts = Concert.joins(:concert_performances)
                                    .where(concert_performances: { concert_artist_id: @concert.concert_artist_ids })
                                    .where.not(id: @concert.id)
                                    .distinct
                                    .order(played_on: :desc)
                                    .limit(5) %>
        <% if artist_concerts.any? %>
          <ul class="space-y-2">
            <% artist_concerts.each do |concert| %>
              <li>
                <%= link_to admin_concert_path(concert), 
                    class: "text-sm text-indigo-600 hover:text-indigo-900" do %>
                  <%= concert.played_on&.strftime('%b %d, %Y') %>
                  <span class="text-gray-500">at <%= concert.concert_venue&.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm text-gray-500 italic">No other concerts by these artists</p>
        <% end %>
      </div>
    </div>
  </div>
</div>