<%# app/views/admin/concerts/venues/index.html.erb %>
<% content_for :title, "Venues" %>

<div class="mb-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Venues</h1>
    <%= link_to "New Venue", new_admin_concerts_venue_path,
        class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors" %>
  </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <% if @venues.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Concerts</th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        <% @venues.each do |venue| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to venue.name,
                  admin_concerts_venue_path(venue),
                  class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <% if venue.city.present? %>
                <%= venue.city %><%= ", #{venue.state}" if venue.state.present? %>
              <% else %>
                <span class="text-gray-400 italic">No location</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= venue.concerts_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="px-6 py-3 border-t border-gray-200">
      <%= paginate @venues %>
    </div>
  <% else %>
    <div class="text-center py-12 px-6">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No venues found</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new venue.</p>
      <div class="mt-6">
        <%= link_to "New Venue", new_admin_concerts_venue_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>
