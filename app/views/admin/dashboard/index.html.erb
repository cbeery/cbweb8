<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Admin Dashboard</h1>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- S3 Test Card -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">S3 Upload Test</h3>
          <p class="mt-1 text-sm text-gray-600">Test file uploads and image processing</p>
          <%= link_to "Test S3 →", admin_test_s3_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
      
      <!-- ActiveJob Test Card -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">ActiveJob Test</h3>
          <p class="mt-1 text-sm text-gray-600">Test job queueing with SolidQueue</p>
          <%= link_to "Test Jobs →", admin_test_job_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
      
      <!-- Mission Control Card -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Mission Control</h3>
          <p class="mt-1 text-sm text-gray-600">Monitor job queue and processing</p>
          <%= link_to "Open Mission Control →", mission_control_jobs.root_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Syncs -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Sync Service</h3>
          <p class="mt-1 text-sm text-gray-600">Sync jobs</p>
          <%= link_to "Data Syncs →", admin_syncs_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Log -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Log Entries</h3>
          <p class="mt-1 text-sm text-gray-600">Log entries</p>
          <%= link_to "Open Log →", admin_log_entries_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Movies -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Movies</h3>
          <p class="mt-1 text-sm text-gray-600">Movies</p>
          <%= link_to "Movies →", admin_movies_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Spotify -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Spotify</h3>
          <p class="mt-1 text-sm text-gray-600">Spotify</p>
          <%= link_to "Spotify →", admin_spotify_playlists_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>,
          <%= link_to "Mixtapes →", mixtapes_admin_spotify_playlists_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Last.fm -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Last.fm</h3>
          <p class="mt-1 text-sm text-gray-600">Last.fm</p>
          <%= link_to "Last.fm →", top_admin_lastfm_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- NBA Section Card -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">NBA Section</h3>
              <p class="mt-1 text-sm text-gray-600">Games, teams, and viewing stats</p>
              <%= link_to "Open NBA Dashboard →", admin_nba_root_path, 
                  class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Concerts -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Shows</h3>
          <p class="mt-1 text-sm text-gray-600">Shows</p>
          <%= link_to "Shows →", admin_concerts_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Bike -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Bike</h3>
          <p class="mt-1 text-sm text-gray-600">Bike</p>
          <%= link_to "Bike →", admin_bike_root_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Books -->
      <div class="bg-gray-50 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900">Books</h3>
          <p class="mt-1 text-sm text-gray-600">Books</p>
          <%= link_to "Books →", admin_books_path, 
              class: "mt-3 inline-block text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

    </div>
    
    <div class="mt-8 border-t border-gray-200 pt-8">
      <h2 class="text-lg font-medium text-gray-900 mb-4">System Status</h2>
      <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Users</dt>
          <dd class="mt-1 text-lg font-medium text-gray-900"><%= User.count %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Storage Service</dt>
          <dd class="mt-1 text-lg font-medium text-gray-900">
            <%= Rails.application.config.active_storage.service.to_s.capitalize %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Queue Adapter</dt>
          <dd class="mt-1 text-lg font-medium text-gray-900">
            <%= Rails.application.config.active_job.queue_adapter.to_s.capitalize %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
