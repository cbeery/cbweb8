<%# app/views/admin/lastfm/counts.html.erb %>
<% content_for :title, "Last.fm Scrobble Counts" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <%# Header - stacks on mobile, row on desktop %>
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Daily Scrobble Counts</h1>
        <p class="mt-1 text-sm text-gray-500">
          Tracking daily listening activity since 2008
        </p>
      </div>
      <%= render 'nav', current_action: 'counts' %>
    </div>
  </div>

  <%# Quick Stats %>
  <div class="mb-8 grid grid-cols-2 gap-3 sm:grid-cols-3 lg:grid-cols-6 lg:gap-4">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">Today</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:today]) %></dd>
        <% if @recent_stats[:yesterday] > 0 %>
          <% change = ((@recent_stats[:today] - @recent_stats[:yesterday]).to_f / @recent_stats[:yesterday] * 100).round(1) %>
          <p class="mt-1 text-xs <%= change >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= change >= 0 ? '↑' : '↓' %> <%= change.abs %>% vs yesterday
          </p>
        <% end %>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">Yesterday</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:yesterday]) %></dd>
        <p class="mt-1 text-xs text-gray-500">
          <%= Date.yesterday.strftime("%b %d") %>
        </p>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">This Week</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:this_week]) %></dd>
        <% if @recent_stats[:last_week] > 0 %>
          <% change = ((@recent_stats[:this_week] - @recent_stats[:last_week]).to_f / @recent_stats[:last_week] * 100).round(1) %>
          <p class="mt-1 text-xs <%= change >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= change >= 0 ? '↑' : '↓' %> <%= change.abs %>% vs last week
          </p>
        <% end %>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">Last Week</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:last_week]) %></dd>
        <p class="mt-1 text-xs text-gray-500">
          <%= 1.week.ago.beginning_of_week.strftime("%b %d") %> - <%= 1.week.ago.end_of_week.strftime("%b %d") %>
        </p>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">This Month</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:this_month]) %></dd>
        <% if @recent_stats[:last_month] > 0 %>
          <% change = ((@recent_stats[:this_month] - @recent_stats[:last_month]).to_f / @recent_stats[:last_month] * 100).round(1) %>
          <p class="mt-1 text-xs <%= change >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= change >= 0 ? '↑' : '↓' %> <%= change.abs %>% vs last month
          </p>
        <% end %>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-3 py-4 sm:p-5">
        <dt class="text-xs font-medium text-gray-500 truncate">Daily Average</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@summaries[:daily_avg]) %></dd>
        <p class="mt-1 text-xs text-gray-500">
          Over selected period
        </p>
      </div>
    </div>
  </div>

  <%# High/Low Stats %>
  <div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div class="bg-green-50 overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-green-800 truncate">Highest Day</dt>
        <dd class="mt-1 text-2xl font-semibold text-green-900"><%= number_with_delimiter(@recent_stats[:highest_day]) %> plays</dd>
        <% if @recent_stats[:highest_date] %>
          <p class="mt-2 text-sm text-green-700">
            <%= @recent_stats[:highest_date].strftime("%B %d, %Y") %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="bg-red-50 overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-red-800 truncate">Lowest Day</dt>
        <dd class="mt-1 text-2xl font-semibold text-red-900"><%= number_with_delimiter(@recent_stats[:lowest_day]) %> plays</dd>
        <% if @recent_stats[:lowest_date] %>
          <p class="mt-2 text-sm text-red-700">
            <%= @recent_stats[:lowest_date].strftime("%B %d, %Y") %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Date Filter %>
  <div class="mb-6 bg-white shadow rounded-lg p-4">
    <%= form_with url: url_for(controller: 'admin/lastfm', action: 'counts'), method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :start_date, value: @start_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :end_date, value: @end_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
      <div class="flex flex-wrap gap-2">
        <%= link_to "Last 7 days", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 7.days.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "Last 30 days", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 30.days.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "Last 3 months", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 3.months.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "This year", url_for(controller: 'admin/lastfm', action: 'counts', start_date: Date.current.beginning_of_year, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "All-time", url_for(controller: 'admin/lastfm', action: 'counts', start_date: Date.new(2008,1,1), end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>

  <%# Daily Counts Table with horizontal scroll on mobile %>
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Date
            </th>
            <th scope="col" class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Day
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Plays
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Graph
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% max_plays = @scrobble_counts.maximum(:plays) || 100 %>
          <% @scrobble_counts.each do |count| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <div>
                  <div class="font-medium text-gray-900">
                    <span class="hidden sm:inline"><%= count.played_on.strftime("%B %d, %Y") %></span>
                    <span class="sm:hidden"><%= count.played_on.strftime("%b %d, %Y") %></span>
                  </div>
                  <div class="sm:hidden text-xs text-gray-500">
                    <%= count.played_on.strftime("%A") %>
                  </div>
                </div>
              </td>
              <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= count.played_on.strftime("%A") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= number_with_delimiter(count.plays) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap min-w-[150px]">
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                  <div class="bg-indigo-600 h-2.5 rounded-full" style="width: <%= (count.plays.to_f / max_plays * 100).round %>%"></div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Pagination %>
    <% if @total_pages > 1 %>
      <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <% if @page > 1 %>
            <%= link_to "Previous", url_for(controller: 'admin/lastfm', action: 'counts', page: @page - 1, start_date: @start_date, end_date: @end_date), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
          <% if @page < @total_pages %>
            <%= link_to "Next", url_for(controller: 'admin/lastfm', action: 'counts', page: @page + 1, start_date: @start_date, end_date: @end_date), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Showing page <span class="font-medium"><%= @page %></span> of <span class="font-medium"><%= @total_pages %></span>
              (<span class="font-medium"><%= number_with_delimiter(@total_count) %></span> total days)
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <% if @page > 1 %>
                <%= link_to url_for(controller: 'admin/lastfm', action: 'counts', page: @page - 1, start_date: @start_date, end_date: @end_date), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <span class="sr-only">Previous</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
              
              <% if @page < @total_pages %>
                <%= link_to url_for(controller: 'admin/lastfm', action: 'counts', page: @page + 1, start_date: @start_date, end_date: @end_date), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <span class="sr-only">Next</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Summary Sections %>
  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <%# Weekly Summary %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Weekly Summary</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Week</th>
              <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Plays</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @summaries[:weekly].each do |week, plays| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 text-sm text-gray-900"><%= week.strftime("%b %d") %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-right"><%= number_with_delimiter(plays) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Monthly Summary %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Monthly Summary</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Month</th>
              <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Plays</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @summaries[:monthly].each do |month, plays| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 text-sm text-gray-900"><%= month.strftime("%B %Y") %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-right"><%= number_with_delimiter(plays) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Yearly Summary %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Yearly Summary</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Year</th>
              <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Plays</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @summaries[:yearly].each do |year, plays| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 text-sm text-gray-900"><%= year %></td>
                <td class="px-4 py-2 text-sm text-gray-900 text-right"><%= number_with_delimiter(plays) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
