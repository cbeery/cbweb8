<%# app/views/admin/lastfm/counts.html.erb %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <%# Header %>
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Daily Scrobble Counts</h1>
        <p class="mt-1 text-sm text-gray-500">
          Tracking daily listening activity since 2008
        </p>
      </div>
      <div class="flex gap-4">
        <%= link_to admin_syncs_path(source: 'daily_scrobbles'), 
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                    data: { turbo_method: :post, turbo_confirm: "Start daily counts sync?" } do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Update Counts
        <% end %>
        
        <%= link_to url_for(controller: 'admin/lastfm', action: 'top'), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Top
        <% end %>
        <%= link_to url_for(controller: 'admin/lastfm', action: 'plays'), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Plays
        <% end %>
      </div>
    </div>
  </div>

  <%# Quick Stats %>
  <div class="mb-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Today</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:today]) %></dd>
        <% if @recent_stats[:yesterday] > 0 %>
          <% change = ((@recent_stats[:today] - @recent_stats[:yesterday]).to_f / @recent_stats[:yesterday] * 100).round(1) %>
          <p class="mt-2 flex items-center text-sm <%= change >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <% if change >= 0 %>
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
            <% else %>
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            <% end %>
            <%= change.abs %>% from yesterday
          </p>
        <% end %>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:this_week]) %></dd>
        <p class="mt-2 text-sm text-gray-500">
          Daily avg: <%= (@recent_stats[:this_week].to_f / Date.today.cwday).round(1) %>
        </p>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">This Month</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:this_month]) %></dd>
        <p class="mt-2 text-sm text-gray-500">
          Daily avg: <%= (@recent_stats[:this_month].to_f / Date.today.day).round(1) %>
        </p>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">All-Time High</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@recent_stats[:highest_day]) %></dd>
        <% if @recent_stats[:highest_date] %>
          <p class="mt-2 text-sm text-gray-500">
            <%= @recent_stats[:highest_date].strftime("%B %d, %Y") %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Date Filter %>
  <div class="mb-6 bg-white shadow rounded-lg p-4">
    <%= form_with url: url_for(controller: 'admin/lastfm', action: 'counts'), method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :start_date, value: @start_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :end_date, value: @end_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
      <div class="flex gap-2">
        <%= link_to "Last 7 days", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 7.days.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "Last 30 days", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 30.days.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "Last 3 months", url_for(controller: 'admin/lastfm', action: 'counts', start_date: 3.months.ago, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "This year", url_for(controller: 'admin/lastfm', action: 'counts', start_date: Date.current.beginning_of_year, end_date: Date.today), class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>

  <%# Tabs for different views %>
  <div data-controller="tabs" data-tabs-active-class="border-indigo-500 text-indigo-600">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <button
          data-tabs-target="tab"
          data-action="click->tabs#select"
          data-panel-id="daily-panel"
          class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          role="tab"
        >
          Daily
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#select"
          data-panel-id="weekly-panel"
          class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          role="tab"
        >
          Weekly
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#select"
          data-panel-id="monthly-panel"
          class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          role="tab"
        >
          Monthly
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#select"
          data-panel-id="yearly-panel"
          class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          role="tab"
        >
          Yearly
        </button>
      </nav>
    </div>

    <%# Daily Panel %>
    <div id="daily-panel" data-tabs-target="panel" class="mt-6">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Date
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Day
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Plays
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Graph
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% max_plays = @scrobble_counts.maximum(:plays) || 100 %>
            <% @scrobble_counts.each do |count| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= count.played_on.strftime("%B %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= count.played_on.strftime("%A") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_with_delimiter(count.plays) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-indigo-600 h-2.5 rounded-full" style="width: <%= (count.plays.to_f / max_plays * 100).round %>%"></div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%# Pagination %>
        <% if @total_pages > 1 %>
          <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
              <% if @page > 1 %>
                <%= link_to "Previous", url_for(params.permit(:start_date, :end_date).merge(page: @page - 1)), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
              <% if @page < @total_pages %>
                <%= link_to "Next", url_for(params.permit(:start_date, :end_date).merge(page: @page + 1)), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% end %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing page <span class="font-medium"><%= @page %></span> of <span class="font-medium"><%= @total_pages %></span>
                  (<%= number_with_delimiter(@total_count) %> total days)
                </p>
              </div>
              <div>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                  <% if @page > 1 %>
                    <%= link_to url_for(params.permit(:start_date, :end_date).merge(page: @page - 1)), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                      <span class="sr-only">Previous</span>
                      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                  
                  <%# Show page numbers %>
                  <% ([@page - 2, 1].max..[1, @page + 2, @total_pages].min).each do |p| %>
                    <%= link_to p, url_for(params.permit(:start_date, :end_date).merge(page: p)), 
                                class: p == @page ? 
                                  "z-10 bg-indigo-50 border-indigo-500 text-indigo-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium" :
                                  "bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium" %>
                  <% end %>
                  
                  <% if @page < @total_pages %>
                    <%= link_to url_for(params.permit(:start_date, :end_date).merge(page: @page + 1)), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                      <span class="sr-only">Next</span>
                      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                </nav>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Weekly Panel %>
    <div id="weekly-panel" data-tabs-target="panel" class="mt-6 hidden">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Week Starting
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Total Plays
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Daily Average
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @summaries[:weekly].each do |week_start, total| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= week_start.strftime("%B %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_with_delimiter(total) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= (total / 7.0).round(1) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Monthly Panel %>
    <div id="monthly-panel" data-tabs-target="panel" class="mt-6 hidden">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Month
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Total Plays
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Daily Average
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @summaries[:monthly].each do |month_start, total| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= month_start.strftime("%B %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_with_delimiter(total) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= (total.to_f / month_start.end_of_month.day).round(1) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Yearly Panel %>
    <div id="yearly-panel" data-tabs-target="panel" class="mt-6 hidden">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Year
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Total Plays
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Daily Average
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @summaries[:yearly].each do |year, total| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= year %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_with_delimiter(total) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= (total / 365.0).round(1) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>