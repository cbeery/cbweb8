<%# app/views/admin/lastfm/top.html.erb %>
<% content_for :title, "Last.fm Top Scrobbles" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <%# Header - stacks on mobile, row on desktop %>
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Last.fm Top Scrobbles</h1>
        <% if @last_sync %>
          <p class="mt-1 text-sm text-gray-500">
            Last updated: <%= @last_sync.strftime("%B %d, %Y at %l:%M %p %Z") %>
          </p>
        <% end %>
      </div>

      <div class="flex flex-wrap gap-2 sm:gap-4">
        <%= link_to admin_syncs_path(source: 'top_scrobbles'), 
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                    data: { turbo_method: :post, turbo_confirm: "Start Last.fm sync?" } do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Update Tops
        <% end %>
        
        <%= link_to url_for(controller: 'admin/lastfm', action: 'counts'), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Counts
        <% end %>
        
        <%= link_to url_for(controller: 'admin/lastfm', action: 'plays'), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Plays
        <% end %>
      </div>
    </div>
  </div>

  <%# Category Tabs - now using links instead of Stimulus buttons %>
  <div class="border-b border-gray-200 mb-6">
    <nav class="-mb-px flex space-x-8" aria-label="Categories">
      <% Admin::LastfmController::CATEGORIES.each do |category| %>
        <%= link_to url_for(controller: 'admin/lastfm', action: 'top', category: category, period: @period),
                    class: "#{@category == category ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm capitalize" do %>
          <%= category.pluralize.capitalize %>
        <% end %>
      <% end %>
    </nav>
  </div>

  <%# Period Buttons %>
  <div class="mb-6">
    <nav class="flex flex-wrap gap-2" aria-label="Periods">
      <% Admin::LastfmController::PERIODS.each do |period| %>
        <%= link_to url_for(controller: 'admin/lastfm', action: 'top', category: @category, period: period),
                    class: "#{@period == period ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700 bg-gray-100'} px-3 py-2 font-medium text-sm rounded-md" do %>
          <%= Admin::LastfmController::PERIOD_LABELS[period] %>
        <% end %>
      <% end %>
    </nav>
  </div>

  <%# Table with horizontal scroll on mobile %>
  <div class="overflow-x-auto">
    <%= render 'top_table' %>
  </div>
</div>
