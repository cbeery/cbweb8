<%# app/views/admin/lastfm/top.html.erb %>
<% content_for :title, "Last.fm Top Scrobbles" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <%# Header - stacks on mobile, row on desktop %>
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Last.fm Top Scrobbles</h1>
        <% if @last_sync %>
          <p class="mt-1 text-sm text-gray-500">
            Last updated: <%= @last_sync.strftime("%B %d, %Y at %l:%M %p %Z") %>
          </p>
        <% end %>
      </div>

      <%= render 'nav', current_action: 'top' %>
    </div>
  </div>

  <%# Category Tabs - now using links instead of Stimulus buttons %>
  <div class="border-b border-gray-200 mb-6">
    <nav class="-mb-px flex space-x-8" aria-label="Categories">
      <% Admin::LastfmController::CATEGORIES.each do |category| %>
        <%= link_to url_for(controller: 'admin/lastfm', action: 'top', category: category, period: @period),
                    class: "#{@category == category ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm capitalize" do %>
          <%= category.pluralize.capitalize %>
        <% end %>
      <% end %>
    </nav>
  </div>

  <%# Period Buttons %>
  <div class="mb-6">
    <nav class="flex flex-wrap gap-2" aria-label="Periods">
      <% Admin::LastfmController::PERIODS.each do |period| %>
        <%= link_to url_for(controller: 'admin/lastfm', action: 'top', category: @category, period: period),
                    class: "#{@period == period ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700 bg-gray-100'} px-3 py-2 font-medium text-sm rounded-md" do %>
          <%= Admin::LastfmController::PERIOD_LABELS[period] %>
        <% end %>
      <% end %>
    </nav>
  </div>

  <%# Table with horizontal scroll on mobile %>
  <div class="overflow-x-auto">
    <%= render 'top_table' %>
  </div>
</div>
