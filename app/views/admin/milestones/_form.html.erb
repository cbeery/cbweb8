<!-- app/views/admin/milestones/_form.html.erb -->
<%= form_with(model: [:admin, milestone], local: true) do |form| %>
  <% if milestone.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4 mb-6">
      <h3 class="text-red-800 font-medium mb-2">
        <%= pluralize(milestone.errors.count, "error") %> prohibited this milestone from being saved:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-600">
        <% milestone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :bicycle_id, "Bicycle", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :bicycle_id, 
          options_for_select(@bicycles, milestone.bicycle_id),
          { prompt: "Select a bicycle..." },
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "e.g., New Tires, Chain Replacement, 1000 Mile Mark" %>
      <p class="text-xs text-gray-500 mt-1">
        Include keywords like 'tire', 'chain', 'brake' for automatic maintenance detection
      </p>
    </div>

    <div>
      <%= form.label :occurred_on, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.date_field :occurred_on, 
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :description, "Notes (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, 
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Additional details about this milestone..." %>
    </div>

    <div class="flex gap-2">
      <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
      <% if milestone.persisted? %>
        <%= link_to "Cancel", admin_milestone_path(milestone), 
            class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 transition" %>
      <% else %>
        <%= link_to "Cancel", admin_milestones_path, 
            class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 transition" %>
      <% end %>
    </div>
  </div>
<% end %>
