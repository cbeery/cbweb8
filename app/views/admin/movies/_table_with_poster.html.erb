<!-- app/views/admin/movies/_table_with_poster.html.erb -->
<div class="bg-white shadow rounded-lg overflow-hidden">
  <!-- Scrollable table container -->
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap sticky left-0 bg-gray-50 z-10">
            Poster
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Title
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Last Viewed
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Year
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Rating
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Views
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Rewatches
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
            Location
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% movies.each do |movie| %>
          <tr class="hover:bg-gray-50">
            <!-- Poster - sticky left column -->
            <td class="px-6 py-4 whitespace-nowrap sticky left-0 bg-white z-10 hover:bg-gray-50">
              <%# CHANGED: movie.movie_posters.first -> movie.movie_poster %>
              <% poster = movie.movie_poster %>
              <% if poster&.image&.attached? %>
                <%= image_tag poster.image, 
                    class: "w-12 h-auto rounded shadow-sm",
                    alt: movie.title %>
              <% elsif poster&.url? %>
                <img src="<%= poster.url %>" 
                     class="w-12 h-auto rounded shadow-sm"
                     alt="<%= movie.title %>">
              <% else %>
                <div class="w-12 h-16 bg-gray-200 rounded flex items-center justify-center">
                  <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </td>
            <!-- ... rest of table row ... -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
