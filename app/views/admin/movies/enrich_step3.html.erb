<!-- app/views/admin/movies/enrich_step3.html.erb -->
<% content_for :title, "Select Poster: #{@movie.title}" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Progress Steps -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="flex items-center justify-center w-10 h-10 bg-green-600 text-white rounded-full">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-gray-900">TMDB Data</h3>
            <p class="text-xs text-gray-500">✓ Complete</p>
          </div>
        </div>
        
        <div class="flex-1 mx-4">
          <div class="h-0.5 bg-green-600"></div>
        </div>
        
        <div class="flex items-center">
          <div class="flex items-center justify-center w-10 h-10 bg-green-600 text-white rounded-full">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-gray-900">Viewing Details</h3>
            <p class="text-xs text-gray-500">✓ Complete</p>
          </div>
        </div>
        
        <div class="flex-1 mx-4">
          <div class="h-0.5 bg-green-600"></div>
        </div>
        
        <div class="flex items-center">
          <div class="flex items-center justify-center w-10 h-10 bg-indigo-600 text-white rounded-full">3</div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-gray-900">Select Poster</h3>
            <p class="text-xs text-gray-500">Choose artwork</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-lg shadow-lg">
      <div class="px-6 py-4 border-b">
        <h1 class="text-2xl font-bold text-gray-900">Select Poster</h1>
        <p class="mt-1 text-sm text-gray-600">
          Choose the best poster for 
          <%= link_to admin_movie_path(@movie), 
              class: "text-indigo-600 hover:text-indigo-800 underline font-medium" do %>
            "<%= @movie.title %>"
          <% end %>
        </p>
      </div>

      <div class="px-6 py-6">
        <!-- Use the shared poster grid partial -->
        <%= render 'poster_grid', 
            movie: @movie, 
            posters: @posters, 
            total_count: @total_count,
            grid_cols: "grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5" %>
        
        <div class="mt-8 pt-6 border-t flex justify-between">
          <%= link_to "← Back", 
              enrich_step2_admin_movie_path(@movie),
              class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium" %>
          
          <% if @posters.blank? || @posters.empty? %>
            <%= link_to "Complete Without Poster", 
                admin_movie_path(@movie),
                class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium" %>
          <% else %>
            <%= link_to "Skip Poster Selection", 
                admin_movie_path(@movie),
                class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 font-medium" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
