<!-- app/views/admin/movies/index.html.erb -->
<% content_for :title, "Movies" %>
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Movies Admin</h1>
        <p class="mt-1 text-sm text-gray-600">
          Manage your movie collection
        </p>
      </div>
      
      <!-- View Mode Switcher -->
      <div class="flex items-center space-x-2">
        <span class="text-sm text-gray-600">View:</span>
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <%= link_to admin_movies_path(view: 'grid', search: params[:search], sort: params[:sort]),
              class: "px-3 py-2 text-sm font-medium #{@view_mode == 'grid' ? 'text-white bg-indigo-600' : 'text-gray-700 bg-white'} border border-gray-300 rounded-l-md hover:bg-gray-50 focus:z-10 focus:ring-2 focus:ring-indigo-500",
              title: "Grid View" do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM13 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2h-2z" />
            </svg>
          <% end %>
          
          <%= link_to admin_movies_path(view: 'table', search: params[:search], sort: params[:sort]),
              class: "px-3 py-2 text-sm font-medium #{@view_mode == 'table' ? 'text-white bg-indigo-600' : 'text-gray-700 bg-white'} border-t border-b border-gray-300 hover:bg-gray-50 focus:z-10 focus:ring-2 focus:ring-indigo-500",
              title: "Table View" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
          <% end %>
          
          <%= link_to admin_movies_path(view: 'table_with_poster', search: params[:search], sort: params[:sort]),
              class: "px-3 py-2 text-sm font-medium #{@view_mode == 'table_with_poster' ? 'text-white bg-indigo-600' : 'text-gray-700 bg-white'} border border-gray-300 rounded-r-md hover:bg-gray-50 focus:z-10 focus:ring-2 focus:ring-indigo-500",
              title: "Table with Posters" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <div class="flex flex-col sm:flex-row gap-4">
        <%= form_with url: admin_movies_path, method: :get, class: "flex-1" do |f| %>
          <%= hidden_field_tag :view, @view_mode %>
          <div class="flex gap-2">
            <%= f.text_field :search, 
                placeholder: "Search movies...", 
                value: params[:search],
                class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <%= f.submit "Search", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 cursor-pointer" %>
          </div>
        <% end %>
      </div>
      
      <!-- Sort Options -->
      <div class="mt-4 flex flex-wrap gap-2 text-sm">
        <span class="text-gray-500">Sort by:</span>
        <%= link_to "Recent", admin_movies_path(view: @view_mode, search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort].blank? ? 'font-semibold' : ''}" %>
        <%= link_to "Title", admin_movies_path(view: @view_mode, sort: 'title', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'title' ? 'font-semibold' : ''}" %>
        <%= link_to "Year", admin_movies_path(view: @view_mode, sort: 'year', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'year' ? 'font-semibold' : ''}" %>
        <%= link_to "Rating", admin_movies_path(view: @view_mode, sort: 'rating', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'rating' ? 'font-semibold' : ''}" %>
        <%= link_to "Last Watched", admin_movies_path(view: @view_mode, sort: 'watched', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'watched' ? 'font-semibold' : ''}" %>
      </div>
    </div>
    
    <!-- Render appropriate view based on @view_mode -->
    <%= render "admin/movies/#{@view_mode}", movies: @movies %>
    
    <% if @movies.empty? %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-500">No movies found.</p>
      </div>
    <% end %>
  </div>
</div>