<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Movies Admin</h1>
      <p class="mt-1 text-sm text-gray-600">
        Manage your movie collection
      </p>
    </div>
    
    <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <div class="flex flex-col sm:flex-row gap-4">
        <%= form_with url: admin_movies_path, method: :get, class: "flex-1" do |f| %>
          <div class="flex gap-2">
            <%= f.text_field :search, 
                placeholder: "Search movies...", 
                value: params[:search],
                class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <%= f.submit "Search", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 cursor-pointer" %>
          </div>
        <% end %>
      </div>
      
      <!-- Sort Options -->
      <div class="mt-4 flex flex-wrap gap-2 text-sm">
        <span class="text-gray-500">Sort by:</span>
        <%= link_to "Recent", admin_movies_path(search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort].blank? ? 'font-semibold' : ''}" %>
        <%= link_to "Title", admin_movies_path(sort: 'title', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'title' ? 'font-semibold' : ''}" %>
        <%= link_to "Year", admin_movies_path(sort: 'year', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'year' ? 'font-semibold' : ''}" %>
        <%= link_to "Rating", admin_movies_path(sort: 'rating', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'rating' ? 'font-semibold' : ''}" %>
        <%= link_to "Last Watched", admin_movies_path(sort: 'watched', search: params[:search]), 
            class: "text-indigo-600 hover:text-indigo-800 #{params[:sort] == 'watched' ? 'font-semibold' : ''}" %>
      </div>
    </div>
    
    <!-- Movies Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @movies.each do |movie| %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
          <%= link_to admin_movie_path(movie), class: "block" do %>
            <!-- Poster Card -->
            <div class="aspect-[2/3] bg-gray-200 rounded-t-lg overflow-hidden">
              <% poster = movie.movie_posters.first %>
              <% if poster&.image&.attached? %>
                <%= image_tag poster.image, 
                    alt: movie.title,
                    class: "w-full h-full object-cover",
                    loading: "lazy" %>
              <% else %>
                <!-- Placeholder when no poster -->
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            
            <!-- Movie Info -->
            <div class="p-4">
              <h3 class="font-semibold text-gray-900 line-clamp-2">
                <%= movie.title %>
              </h3>
              <% if movie.year %>
                <p class="text-sm text-gray-500 mt-1"><%= movie.year %></p>
              <% end %>
              
              <div class="mt-3 flex items-center justify-between text-sm">
                <% if movie.rating %>
                  <div class="flex items-center gap-1">
                    <span class="text-yellow-500">â˜…</span>
                    <span class="text-gray-700"><%= movie.rating %></span>
                  </div>
                <% else %>
                  <span class="text-gray-400">Not rated</span>
                <% end %>
                
                <span class="text-gray-500">
                  <%= pluralize(movie.viewings.count, 'view') %>
                </span>
              </div>
              
              <% last_viewed = movie.viewings.maximum(:viewed_on) %>
              <% if last_viewed %>
                <p class="text-xs text-gray-400 mt-2">
                  Last: <%= last_viewed.strftime("%b %d, %Y") %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if @movies.empty? %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-500">No movies found.</p>
      </div>
    <% end %>
  </div>
</div>