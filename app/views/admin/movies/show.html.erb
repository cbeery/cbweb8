<!-- app/views/admin/movies/show.html.erb -->
<% content_for :title, "#{@movie.title} - Movies" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back Navigation -->
    <div class="mb-6">
      <%= link_to admin_movies_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800" do %>
        <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Movies
      <% end %>
    </div>
    
    <!-- Movie Details Card -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="lg:flex">
        <!-- Poster Section -->
        <div class="lg:w-1/3 xl:w-1/4 bg-gray-100">
          <div class="aspect-[2/3] relative" id="movie_<%= @movie.id %>_poster">
            <%= render partial: 'admin/movies/poster', locals: { movie: @movie, poster: @poster } %>
          </div>
        </div>
        
        <!-- Details Section -->
        <div class="lg:w-2/3 xl:w-3/4 p-6">
          <!-- Title and Actions -->
          <div class="flex justify-between items-start mb-6">
            <div>
              <h1 class="text-3xl font-bold text-gray-900"><%= @movie.title %></h1>
              <% if @movie.year.present? %>
                <p class="text-xl text-gray-600"><%= @movie.year %></p>
              <% end %>
              <% if @movie.director.present? %>
                <p class="text-lg text-gray-500">Directed by <%= @movie.director %></p>
              <% end %>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-2">
              <%= link_to edit_admin_movie_path(@movie), 
                  class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 text-sm font-medium" do %>
                Edit
              <% end %>
              
              <%= link_to enrich_admin_movie_path(@movie),
                  class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm font-medium" do %>
                Enrich
              <% end %>
              
              <%= link_to tmdb_lookup_admin_movie_path(@movie),
                  data: { turbo_frame: "tmdb_modal" },
                  class: "px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 text-sm font-medium" do %>
                TMDB
              <% end %>
              
              <%= link_to admin_movie_path(@movie),
                  data: { 
                    turbo_method: :delete, 
                    turbo_confirm: "Are you sure you want to delete \"#{@movie.title}\"? This will also delete all #{@movie.viewings.count} viewing(s) and poster(s). This action cannot be undone."
                  },
                  class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 text-sm font-medium" do %>
                Delete
              <% end %>
            </div>
          </div>
          
          <!-- Movie Info Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
            <!-- Rating -->
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm text-gray-500">Rating</div>
              <% if @movie.rating.present? %>
                <div class="text-2xl font-bold text-gray-900">
                  <%= @movie.rating %>
                  <span class="text-yellow-500">★</span>
                </div>
              <% else %>
                <div class="text-gray-400">—</div>
              <% end %>
            </div>
            
            <!-- View Count -->
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm text-gray-500">Viewings</div>
              <div class="text-2xl font-bold text-gray-900"><%= @movie.viewings.count %></div>
            </div>
            
            <!-- First Watched -->
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm text-gray-500">First Watched</div>
              <% first_viewed = @movie.viewings.minimum(:viewed_on) %>
              <% if first_viewed %>
                <div class="text-lg font-semibold text-gray-900"><%= first_viewed.strftime('%b %d, %Y') %></div>
              <% else %>
                <div class="text-gray-400">—</div>
              <% end %>
            </div>
            
            <!-- Runtime -->
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm text-gray-500">Runtime</div>
              <% if @movie.runtime.present? %>
                <div class="text-lg font-semibold text-gray-900"><%= @movie.runtime %> min</div>
              <% else %>
                <div class="text-gray-400">—</div>
              <% end %>
            </div>
          </div>
          
          <!-- External IDs -->
          <div class="border-t pt-4 mb-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">External IDs</h3>
            <div class="flex flex-wrap gap-2">
              <% if @movie.tmdb_id.present? %>
                <a href="https://www.themoviedb.org/movie/<%= @movie.tmdb_id %>" 
                   target="_blank"
                   class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800 hover:bg-blue-200">
                  TMDB: <%= @movie.tmdb_id %>
                  <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                </a>
              <% end %>
              
              <% if @movie.imdb_id.present? %>
                <a href="https://www.imdb.com/title/<%= @movie.imdb_id %>" 
                   target="_blank"
                   class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-yellow-100 text-yellow-800 hover:bg-yellow-200">
                  IMDb: <%= @movie.imdb_id %>
                  <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                </a>
              <% end %>
              
              <% if @movie.letterboxd_id.present? %>
                <a href="https://letterboxd.com/film/<%= @movie.letterboxd_id %>/" 
                   target="_blank"
                   class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 text-green-800 hover:bg-green-200">
                  Letterboxd: <%= @movie.letterboxd_id %>
                  <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                </a>
              <% end %>
              
              <% if @movie.tmdb_id.blank? && @movie.imdb_id.blank? && @movie.letterboxd_id.blank? %>
                <span class="text-gray-400 text-sm">No external IDs linked</span>
              <% end %>
            </div>
          </div>
          
          <!-- Poster Debug Info (only in development) -->
          <% if Rails.env.development? && @poster.present? %>
            <div class="border-t pt-4 mb-6">
              <h3 class="text-sm font-medium text-gray-500 mb-2">Poster Debug</h3>
              <div class="text-xs text-gray-500 space-y-1">
                <p><strong>Source:</strong> <%= @poster.source %></p>
                <p><strong>URL:</strong> <%= truncate(@poster.url.to_s, length: 80) %></p>
                <p><strong>Image attached:</strong> <%= @poster.image.attached? %></p>
                <% if @poster.image.attached? %>
                  <p><strong>Blob key:</strong> <%= @poster.image.blob.key %></p>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Notes -->
          <% if @movie.notes.present? %>
            <div class="border-t pt-4">
              <h3 class="text-sm font-medium text-gray-500 mb-2">Notes</h3>
              <p class="text-gray-700"><%= @movie.notes %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Viewings Section -->
    <div class="mt-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-900">Viewings</h2>
        <%= link_to new_admin_movie_viewing_path(@movie), 
            class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm font-medium" do %>
          + Add Viewing
        <% end %>
      </div>
      
      <% if @viewings.any? %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Location
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rewatch
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Notes
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @viewings.each do |viewing| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= viewing.viewed_on.strftime('%B %d, %Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if viewing.theater %>
                      <%= viewing.theater.name %>
                    <% elsif viewing.location %>
                      <%= viewing.location.capitalize %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if viewing.rewatch? %>
                      <span class="inline-flex px-2 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                        Rewatch
                      </span>
                    <% else %>
                      <span class="inline-flex px-2 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                        First
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <%= viewing.notes.present? ? truncate(viewing.notes, length: 50) : "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "Edit", edit_admin_movie_viewing_path(@movie, viewing),
                        class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <%= link_to "Delete", admin_movie_viewing_path(@movie, viewing),
                        method: :delete,
                        data: { 
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure you want to delete this viewing?"
                        },
                        class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <p class="text-gray-500 mb-4">No viewings recorded yet.</p>
          <%= link_to "Add First Viewing", new_admin_movie_viewing_path(@movie),
              class: "text-indigo-600 hover:text-indigo-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- TMDB Modal Frame -->
<turbo-frame id="tmdb_modal"></turbo-frame>
