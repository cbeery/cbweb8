<!-- app/views/admin/movies/show.html.erb -->
<!-- REPLACES your existing show.html.erb -->
<% content_for :title, "#{@movie.title} - Movies" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back Navigation -->
    <div class="mb-6">
      <%= link_to admin_movies_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800" do %>
        <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Movies
      <% end %>
    </div>
    
    <!-- Movie Details Card -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="lg:flex">
        <!-- Poster Section -->
        <div class="lg:w-1/3 xl:w-1/4 bg-gray-100">
          <div class="aspect-[2/3] relative" id="movie_<%= @movie.id %>_poster">
            <%= render partial: 'admin/movies/poster', locals: { movie: @movie, poster: @poster } %>
          </div>
        </div>
        
        <!-- Details Section -->
        <div class="lg:w-2/3 xl:w-3/4 p-6">
          <!-- Title and Actions -->
          <div class="flex justify-between items-start mb-6">
            <div>
              <h1 class="text-3xl font-bold text-gray-900"><%= @movie.title %></h1>
              <% if @movie.year.present? %>
                <p class="text-xl text-gray-600 mt-1"><%= @movie.year %></p>
              <% end %>
            </div>
            
            <div class="flex space-x-2">
              <%= link_to tmdb_lookup_admin_movie_path(@movie),
                  data: { turbo_frame: "tmdb_modal" },
                  class: "inline-flex items-center px-3 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                TMDB Lookup
              <% end %>
              
              <%= link_to edit_admin_movie_path(@movie), 
                  class: "inline-flex items-center px-3 py-2 bg-indigo-600 text-white text-sm rounded-md hover:bg-indigo-700" do %>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              <% end %>
            </div>
          </div>
          
          <!-- Movie Info -->
          <div class="space-y-3">
            <% if @movie.rating.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">Rating:</span>
                <span class="text-gray-900">
                  <%= '★' * @movie.rating.floor %><%='½' if @movie.rating % 1 == 0.5 %> 
                  (<%= @movie.rating %>/5.0)
                </span>
              </div>
            <% end %>
            
            <% if @movie.director.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">Director:</span>
                <span class="text-gray-900"><%= @movie.director %></span>
              </div>
            <% end %>
            
            <% if @movie.score.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">Score:</span>
                <span class="text-gray-900"><%= @movie.score %></span>
              </div>
            <% end %>
            
            <% if @movie.letterboxd_id.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">Letterboxd:</span>
                <%= link_to @movie.letterboxd_id, 
                    "https://letterboxd.com/film/#{@movie.letterboxd_id}",
                    target: "_blank",
                    class: "text-indigo-600 hover:text-indigo-800" %>
              </div>
            <% end %>
            
            <% if @movie.tmdb_id.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">TMDB:</span>
                <%= link_to @movie.tmdb_id, 
                    "https://www.themoviedb.org/movie/#{@movie.tmdb_id}",
                    target: "_blank",
                    class: "text-indigo-600 hover:text-indigo-800" %>
              </div>
            <% end %>
            
            <% if @movie.url.present? %>
              <div class="flex">
                <span class="text-gray-500 w-32">Link:</span>
                <%= link_to "View on Letterboxd", 
                    @movie.url,
                    target: "_blank",
                    class: "text-indigo-600 hover:text-indigo-800" %>
              </div>
            <% end %>
          </div>
          
          <% if @movie.review.present? %>
            <div class="border-t pt-6 mt-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Review</h3>
              <p class="text-gray-700 whitespace-pre-wrap"><%= @movie.review %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Viewing History -->
    <div class="mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Viewing History</h2>
      
      <% if @viewings.any? %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Notes
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rewatch
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @viewings.each do |viewing| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= viewing.viewed_on.strftime('%B %d, %Y') %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <%= viewing.notes %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= viewing.rewatch? ? 'Yes' : 'No' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <p class="text-gray-500">No viewing history recorded.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Turbo Frame for TMDB Modal -->
<turbo-frame id="tmdb_modal"></turbo-frame>
