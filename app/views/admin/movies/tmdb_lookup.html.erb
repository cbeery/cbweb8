<!-- app/views/admin/movies/tmdb_lookup.html.erb -->
<turbo-frame id="tmdb_modal">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" data-controller="modal">
    <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Modal Header -->
      <div class="border-b px-6 py-4 flex justify-between items-center sticky top-0 bg-white z-10">
        <h2 class="text-xl font-bold text-gray-900">TMDB Movie Lookup</h2>
        <%= link_to admin_movie_path(@movie), 
            data: { turbo_frame: "_top" },
            class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <!-- Modal Body -->
      <div class="px-6 py-4">
        <% if @tmdb_movie.present? %>
          <!-- Movie already has TMDB ID - show confirmation -->
          <div class="mb-6">
            <p class="text-gray-700 mb-4">This movie is linked to TMDB. Confirm this is the correct match:</p>
            
            <div class="border rounded-lg p-4 bg-gray-50 flex items-start space-x-4">
              <% if @tmdb_movie['poster_path'].present? %>
                <%= image_tag TmdbService.poster_url(@tmdb_movie['poster_path'], size: 'w185'),
                    class: "w-24 h-auto rounded shadow-sm" %>
              <% end %>
              
              <div class="flex-1">
                <h3 class="font-bold text-lg text-gray-900">
                  <%= @tmdb_movie['title'] %>
                  <% if @tmdb_movie['release_date'].present? %>
                    <span class="text-gray-500 font-normal">
                      (<%= Date.parse(@tmdb_movie['release_date']).year %>)
                    </span>
                  <% end %>
                </h3>
                
                <% if @director.present? %>
                  <p class="text-gray-600 mt-1">
                    <span class="font-semibold">Director:</span> <%= @director['name'] %>
                  </p>
                <% end %>
                
                <% if @tmdb_movie['overview'].present? %>
                  <p class="text-gray-600 text-sm mt-2"><%= @tmdb_movie['overview'].truncate(200) %></p>
                <% end %>
              </div>
            </div>
            
            <div class="mt-4 flex space-x-3">
              <%= button_to "Confirm & Update Director", 
                  update_from_tmdb_admin_movie_path(@movie, tmdb_id: @movie.tmdb_id),
                  method: :patch,
                  data: { turbo_frame: "tmdb_modal" },
                  class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium" %>
              
              <%= link_to "Skip to Poster Selection", 
                  tmdb_posters_admin_movie_path(@movie),
                  data: { turbo_frame: "tmdb_modal" },
                  class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium" %>
            </div>
          </div>
          
          <div class="border-t pt-4">
            <p class="text-sm text-gray-600 mb-2">Or search for a different movie:</p>
            <%= render partial: 'admin/movies/tmdb_search_form' %>
          </div>
        <% else %>
          <!-- No TMDB ID - show search form -->
          <div class="mb-6">
            <p class="text-gray-700 mb-4">Search TMDB to find this movie:</p>
            <%= render partial: 'admin/movies/tmdb_search_form' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
