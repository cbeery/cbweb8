<!-- app/views/admin/movies/tmdb_posters.html.erb -->
<turbo-frame id="tmdb_modal">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" data-controller="modal">
    <div class="bg-white rounded-lg shadow-xl max-w-6xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Modal Header -->
      <div class="border-b px-6 py-4 flex justify-between items-center sticky top-0 bg-white z-10">
        <div>
          <h2 class="text-xl font-bold text-gray-900">Select Movie Poster</h2>
          <p class="text-sm text-gray-600 mt-1">
            Choose a poster for "<%= @movie.title %>"
          </p>
        </div>
        <%= link_to admin_movie_path(@movie), 
            data: { turbo_frame: "_top" },
            class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <!-- Modal Body -->
      <div class="px-6 py-4">
        <!-- Use the shared poster grid partial -->
        <%= render 'poster_grid', 
            movie: @movie, 
            posters: @posters, 
            total_count: @total_count %>
        
        <div class="mt-6 pt-4 border-t">
          <%= link_to "Cancel", 
              admin_movie_path(@movie), 
              data: { turbo_frame: "_top" },
              class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
