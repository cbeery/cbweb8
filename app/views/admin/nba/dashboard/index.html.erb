<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">NBA Dashboard</h1>
    <p class="mt-2 text-gray-600">Track games, teams, and viewing statistics</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Total Games</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_games %></dd>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Games Watched</dt>
      <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @games_watched %></dd>
      <p class="text-sm text-gray-500">
        <%= (@games_watched.to_f / @total_games * 100).round(1) %>% of all games
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Current Season</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @current_season %></dd>
      <p class="text-sm text-gray-500">
        <%= @season_watched %> / <%= @season_games %> watched
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Teams</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_teams %></dd>
    </div>
  </div>

  <!-- Navigation Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%= link_to admin_nba_games_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">View Games</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900">By Date</div>
            </dd>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= link_to admin_nba_teams_path, class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dt class="text-sm font-medium text-gray-500 truncate">Manage Teams</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900"><%= @total_teams %> Teams</div>
            </dd>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>