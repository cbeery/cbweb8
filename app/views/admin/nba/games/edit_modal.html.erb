<%# app/views/admin/nba/games/edit_modal.html.erb %>
<div class="fixed inset-0 z-50 overflow-y-auto" data-controller="modal-backdrop">
  <div class="flex items-center justify-center min-h-screen px-4">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
         data-action="click->modal-backdrop#close"></div>
    
    <!-- Modal -->
    <div class="relative bg-white rounded-lg max-w-lg w-full">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">
          Edit Game: <%= @game.display_name %>
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          <%= @game.played_on.strftime("%B %d, %Y") %>
        </p>
      </div>
      
      <%= form_with model: @game, url: update_modal_admin_nba_game_path(@game),
                    data: { turbo_frame: "game_#{@game.id}" } do |f| %>
        <div class="px-6 py-4 space-y-6">
          <!-- Quarters Watched -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Quarters Watched
            </label>
            <div class="flex space-x-2" data-controller="button-group">
              <% (0..4).each do |q| %>
                <button type="button"
                        class="flex-1 px-3 py-2 text-sm font-medium rounded-md border <%= @game.quarters_watched == q ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>"
                        data-action="click->button-group#select"
                        data-button-group-value="<%= q %>">
                  <%= q %>
                </button>
              <% end %>
              <%= f.hidden_field :quarters_watched, data: { button_group_target: "input" } %>
            </div>
          </div>
          
          <!-- Network -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Network
            </label>
            <div data-controller="button-group-with-dropdown">
              <!-- Primary Network Options -->
              <div class="grid grid-cols-3 gap-2 mb-2">
                <% %w[ABC ESPN NBA_LP].each do |network| %>
                  <button type="button"
                          class="px-3 py-2 text-sm font-medium rounded-md border <%= @game.network == network ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>"
                          data-action="click->button-group-with-dropdown#selectButton"
                          data-button-group-value="<%= network %>">
                    <%= network == 'NBA_LP' ? 'NBA LP' : network %>
                  </button>
                <% end %>
              </div>
              <div class="grid grid-cols-3 gap-2">
                <% %w[NBA_TV NBC].each do |network| %>
                  <button type="button"
                          class="px-3 py-2 text-sm font-medium rounded-md border <%= @game.network == network ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>"
                          data-action="click->button-group-with-dropdown#selectButton"
                          data-button-group-value="<%= network %>">
                    <%= network == 'NBA_TV' ? 'NBA TV' : network %>
                  </button>
                <% end %>
                
                <!-- More Options Dropdown -->
                <div class="relative">
                  <button type="button"
                          class="w-full px-3 py-2 text-sm font-medium rounded-md border bg-white text-gray-700 border-gray-300 hover:bg-gray-50 flex items-center justify-between"
                          data-action="click->button-group-with-dropdown#toggleDropdown">
                    <span data-button-group-with-dropdown-target="dropdownLabel">
                      <%= %w[Altitude Amazon Peacock Prime].include?(@game.network) ? @game.network : 'More...' %>
                    </span>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  <div class="hidden absolute z-10 mt-1 w-full bg-white rounded-md shadow-lg" 
                       data-button-group-with-dropdown-target="dropdown">
                    <% %w[Altitude Amazon Peacock Prime].each do |network| %>
                      <button type="button"
                              class="block w-full px-4 py-2 text-sm text-left hover:bg-gray-100 <%= @game.network == network ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700' %>"
                              data-action="click->button-group-with-dropdown#selectDropdown"
                              data-button-group-value="<%= network %>">
                        <%= network %>
                      </button>
                    <% end %>
                  </div>
                </div>
              </div>
              <%= f.hidden_field :network, data: { button_group_with_dropdown_target: "input" } %>
            </div>
          </div>
          
          <!-- Screen -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Screen
            </label>
            <div class="grid grid-cols-3 gap-2" data-controller="button-group">
              <% %w[TV iPad iPhone].each do |screen| %>
                <button type="button"
                        class="px-3 py-2 text-sm font-medium rounded-md border <%= @game.screen == screen ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>"
                        data-action="click->button-group#select"
                        data-button-group-value="<%= screen %>">
                  <%= screen %>
                </button>
              <% end %>
              <%= f.hidden_field :screen, data: { button_group_target: "input" } %>
            </div>
          </div>
          
          <!-- Place -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Place
            </label>
            <div data-controller="button-group-with-dropdown">
              <div class="grid grid-cols-2 gap-2">
                <button type="button"
                        class="px-3 py-2 text-sm font-medium rounded-md border <%= @game.place == 'Home' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>"
                        data-action="click->button-group-with-dropdown#selectButton"
                        data-button-group-value="Home">
                  Home
                </button>
                
                <!-- More Places Dropdown -->
                <div class="relative">
                  <button type="button"
                          class="w-full px-3 py-2 text-sm font-medium rounded-md border bg-white text-gray-700 border-gray-300 hover:bg-gray-50 flex items-center justify-between"
                          data-action="click->button-group-with-dropdown#toggleDropdown">
                    <span data-button-group-with-dropdown-target="dropdownLabel">
                      <%= ["Mom & Dad's", "LaVonne's house"].include?(@game.place) ? @game.place : 'Other...' %>
                    </span>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  <div class="hidden absolute z-10 mt-1 w-full bg-white rounded-md shadow-lg right-0" 
                       data-button-group-with-dropdown-target="dropdown">
                    <% ["Mom & Dad's", "LaVonne's house"].each do |place| %>
                      <button type="button"
                              class="block w-full px-4 py-2 text-sm text-left hover:bg-gray-100 <%= @game.place == place ? 'bg-indigo-50 text-indigo-600' : 'text-gray-700' %>"
                              data-action="click->button-group-with-dropdown#selectDropdown"
                              data-button-group-value="<%= place %>">
                        <%= place %>
                      </button>
                    <% end %>
                  </div>
                </div>
              </div>
              <%= f.hidden_field :place, data: { button_group_with_dropdown_target: "input" } %>
            </div>
          </div>
        </div>
        
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
                  data-action="click->modal-backdrop#close">
            Cancel
          </button>
          <%= f.submit "Save Changes",
              class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>