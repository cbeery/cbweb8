<div class="container mx-auto px-4">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to "← Back to Playlists", admin_spotify_playlists_path, 
        class: "text-gray-600 hover:text-gray-900 transition-colors mb-4 inline-block" %>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-start justify-between">
        <div class="flex flex-col sm:flex-row items-start space-y-4 sm:space-y-0 sm:space-x-6">
          <% if @playlist.image_url.present? %>
            <img src="<%= @playlist.image_url %>" 
                 alt="<%= @playlist.name %>"
                 class="h-32 w-32 rounded-lg shadow-md flex-shrink-0">
          <% else %>
            <div class="h-32 w-32 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
              <svg class="h-16 w-16 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
              </svg>
            </div>
          <% end %>
          
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @playlist.name %></h1>
            
            <div class="mt-2 flex flex-wrap gap-2">
              <% if @playlist.mixtape? %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                  Mixtape
                </span>
              <% end %>
              <% if @playlist.public %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Public
                </span>
              <% end %>
              <% if @playlist.collaborative %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  Collaborative
                </span>
              <% end %>
            </div>
            
            <dl class="mt-4 grid grid-cols-2 gap-x-6 gap-y-2 text-sm">
              <div>
                <dt class="font-medium text-gray-500">Made by</dt>
                <dd class="text-gray-900"><%= @playlist.made_by || "-" %></dd>
              </div>
              <div>
                <dt class="font-medium text-gray-500">Date</dt>
                <dd class="text-gray-900"><%= @playlist.made_on&.strftime("%B %Y") || "-" %></dd>
              </div>
              <div>
                <dt class="font-medium text-gray-500">Owner</dt>
                <dd class="text-gray-900"><%= @playlist.owner_name || "Unknown" %></dd>
              </div>
              <div>
                <dt class="font-medium text-gray-500">Followers</dt>
                <dd class="text-gray-900"><%= number_with_delimiter(@playlist.followers_count) %></dd>
              </div>
              <div>
                <dt class="font-medium text-gray-500">Tracks</dt>
                <dd class="text-gray-900"><%= @playlist.track_count %></dd>
              </div>
              <div>
                <dt class="font-medium text-gray-500">Runtime</dt>
                <dd class="text-gray-900"><%= @playlist.runtime_formatted %></dd>
              </div>
            </dl>
            
            <% if @playlist.description.present? %>
              <div class="mt-4">
                <p class="text-sm text-gray-600"><%= @playlist.description %></p>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-2 mt-4 sm:mt-0">
          <%= link_to "Edit", edit_admin_spotify_playlist_path(@playlist), 
              class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition text-center" %>
          <%= button_to "Sync Now", sync_admin_spotify_playlist_path(@playlist), 
              method: :post, 
              class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition cursor-pointer" %>
          <%= link_to "Open in Spotify", @playlist.spotify_url, 
              target: "_blank",
              class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition text-center" %>
        </div>
      </div>
      
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="flex flex-wrap items-center gap-x-4 text-sm text-gray-500">
          <% if @playlist.last_synced_at %>
            <span>Last synced <%= time_ago_in_words(@playlist.last_synced_at) %> ago</span>
          <% else %>
            <span class="text-yellow-600">Never synced</span>
          <% end %>
          <span class="hidden sm:inline">•</span>
          <span>Spotify ID: <%= @playlist.spotify_id %></span>
          <span class="hidden sm:inline">•</span>
          <span>Created <%= @playlist.created_at.strftime("%b %d, %Y") %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Tracks Table with Horizontal Scroll -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <h2 class="text-lg font-semibold text-gray-900">Tracks</h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <!-- Core columns -->
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-12">
              #
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider min-w-[200px]">
              Title
            </th>
            
            <!-- Secondary columns - hidden on smallest screens -->
            <th class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider min-w-[150px]">
              Artist
            </th>
            <th class="hidden sm:table-cell px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Duration
            </th>
            
            <!-- Additional columns - visible on larger screens or with scroll -->
            <th class="hidden md:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Album
            </th>
            <th class="hidden lg:table-cell px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Popularity
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @tracks.each do |playlist_track| %>
            <% track = playlist_track.spotify_track %>
            <tr class="hover:bg-gray-50 transition-colors">
              <!-- Core: Position -->
              <td class="px-6 py-3 whitespace-nowrap text-sm text-gray-500 text-center">
                <%= playlist_track.position %>
              </td>
              
              <!-- Core: Title -->
              <td class="px-6 py-3 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to track.title, admin_spotify_track_path(track), 
                        class: "hover:text-green-600 transition-colors" %>
                    <% if track.explicit %>
                      <span class="ml-1 text-xs text-red-600" title="Explicit">E</span>
                    <% end %>
                  </div>
                  <!-- Mobile-only condensed info -->
                  <div class="sm:hidden text-xs text-gray-500">
                    <%= track.artist_text %>
                  </div>
                </div>
              </td>
              
              <!-- Secondary: Artist -->
              <td class="hidden sm:table-cell px-6 py-3 whitespace-nowrap text-sm text-gray-900">
                <%= track.artist_text %>
              </td>
              
              <!-- Secondary: Duration -->
              <td class="hidden sm:table-cell px-6 py-3 whitespace-nowrap text-sm text-gray-900 text-right">
                <%= track.duration_formatted %>
              </td>
              
              <!-- Additional: Album -->
              <td class="hidden md:table-cell px-6 py-3 whitespace-nowrap text-sm text-gray-500">
                <%= track.album %>
              </td>
              
              <!-- Additional: Popularity -->
              <td class="hidden lg:table-cell px-6 py-3 whitespace-nowrap text-center">
                <div class="flex items-center justify-center">
                  <div class="w-16 bg-gray-200 rounded-full h-2">
                    <div class="bg-green-600 h-2 rounded-full" 
                         style="width: <%= track.popularity || 0 %>%"></div>
                  </div>
                  <span class="ml-2 text-xs text-gray-500"><%= track.popularity || 0 %></span>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="px-6 py-4 bg-gray-50">
      <%= paginate @tracks %>
    </div>
  </div>
</div>