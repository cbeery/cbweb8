<!-- app/views/admin/syncs/_status_detail.html.erb -->
<div class="bg-white rounded-lg shadow">
  <div class="p-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2">
        <div class="flex items-center mb-4">
          <h2 class="text-2xl font-bold text-gray-900 mr-3">Status</h2>
          <span class="px-3 py-1 text-sm font-semibold rounded-full 
                     <%= sync_status.status == 'completed' ? 'bg-green-100 text-green-800' : 
                         sync_status.status == 'failed' ? 'bg-red-100 text-red-800' : 
                         sync_status.status == 'running' ? 'bg-yellow-100 text-yellow-800' : 
                         'bg-gray-100 text-gray-800' %>">
            <%= sync_status.status.titleize %>
          </span>
        </div>

        <% if sync_status.has_progress? %>
          <div class="mb-4">
            <div class="flex justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">Progress</span>
              <span class="text-sm text-gray-600">
                <%= sync_status.processed_items %> / <%= sync_status.total_items %> items
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-6 overflow-hidden">
              <div class="bg-blue-600 h-6 rounded-full flex items-center justify-center text-xs font-medium text-white transition-all duration-300
                         <%= 'animate-pulse' if sync_status.running? %>" 
                   style="width: <%= sync_status.progress_percentage %>%">
                <%= sync_status.progress_percentage %>%
              </div>
            </div>
          </div>
        <% elsif sync_status.running? %>
          <div class="mb-4">
            <div class="flex items-center text-gray-600">
              <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <span>Processed <%= sync_status.processed_items %> items...</span>
            </div>
          </div>
        <% end %>

        <% if sync_status.error_message.present? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <span class="font-medium">Error:</span> <%= sync_status.error_message %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Statistics</h3>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500">Created:</dt>
            <dd>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                <%= sync_status.created_count %>
              </span>
            </dd>
          </div>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500">Updated:</dt>
            <dd>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= sync_status.updated_count %>
              </span>
            </dd>
          </div>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500">Skipped:</dt>
            <dd>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= sync_status.skipped_count %>
              </span>
            </dd>
          </div>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500">Failed:</dt>
            <dd>
              <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                <%= sync_status.failed_count %>
              </span>
            </dd>
          </div>
        </dl>

        <% if sync_status.started_at %>
          <div class="mt-6 pt-6 border-t border-gray-200 text-sm text-gray-500">
            <p>Started: <%= sync_status.started_at.strftime("%I:%M:%S %p") %></p>
            <% if sync_status.completed_at %>
              <p class="mt-1">Duration: <%= distance_of_time_in_words(sync_status.started_at, sync_status.completed_at) %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <% if sync_status.metadata.present? %>

      <details class="mt-6 border-t border-gray-200 pt-6">

        <summary class="cursor-pointer text-sm font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 rounded">
          <span class="inline-flex items-center">
            Metadata
            <svg class="ml-2 h-5 w-5 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </span>
        </summary>
        
        <div class="mt-4 space-y-3">
          <pre class="bg-gray-50 p-4 rounded-lg overflow-x-auto text-sm"><%= JSON.pretty_generate(sync_status.metadata) %></pre>
        </div>
        
      </details>


    <% end %>
  </div>
</div>
