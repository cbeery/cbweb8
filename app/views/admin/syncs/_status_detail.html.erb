<!-- app/views/admin/syncs/_status_detail.html.erb -->
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <div class="d-flex align-items-center mb-3">
          <h2 class="mb-0 me-3">Status</h2>
          <span class="badge bg-<%= status_color(sync_status.status) %> fs-6">
            <%= sync_status.status.titleize %>
          </span>
        </div>

        <% if sync_status.has_progress? %>
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Progress</span>
              <span>
                <%= sync_status.processed_items %> / <%= sync_status.total_items %> items
              </span>
            </div>
            <div class="progress" style="height: 25px;">
              <div class="progress-bar progress-bar-striped 
                         <%= 'progress-bar-animated' if sync_status.running? %>" 
                   role="progressbar" 
                   style="width: <%= sync_status.progress_percentage %>%">
                <%= sync_status.progress_percentage %>%
              </div>
            </div>
          </div>
        <% elsif sync_status.running? %>
          <div class="mb-3">
            <div class="d-flex align-items-center">
              <div class="spinner-border spinner-border-sm me-2" role="status">
                <span class="visually-hidden">Processing...</span>
              </div>
              <span>Processed <%= sync_status.processed_items %> items...</span>
            </div>
          </div>
        <% end %>

        <% if sync_status.error_message.present? %>
          <div class="alert alert-danger">
            <strong>Error:</strong> <%= sync_status.error_message %>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <h3>Statistics</h3>
        <dl class="row">
          <dt class="col-sm-6">Created:</dt>
          <dd class="col-sm-6">
            <span class="badge bg-success"><%= sync_status.created_count %></span>
          </dd>
          
          <dt class="col-sm-6">Updated:</dt>
          <dd class="col-sm-6">
            <span class="badge bg-info"><%= sync_status.updated_count %></span>
          </dd>
          
          <dt class="col-sm-6">Skipped:</dt>
          <dd class="col-sm-6">
            <span class="badge bg-secondary"><%= sync_status.skipped_count %></span>
          </dd>
          
          <dt class="col-sm-6">Failed:</dt>
          <dd class="col-sm-6">
            <span class="badge bg-danger"><%= sync_status.failed_count %></span>
          </dd>
        </dl>

        <% if sync_status.started_at %>
          <p class="text-muted small">
            Started: <%= sync_status.started_at.strftime("%I:%M:%S %p") %>
            <% if sync_status.completed_at %>
              <br>Duration: <%= distance_of_time_in_words(sync_status.started_at, sync_status.completed_at) %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    
    <% if sync_status.metadata.present? %>
      <div class="mt-3">
        <h4>Metadata</h4>
        <pre class="bg-light p-2 rounded"><%= JSON.pretty_generate(sync_status.metadata) %></pre>
      </div>
    <% end %>
  </div>
</div>
