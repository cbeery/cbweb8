<!-- app/views/admin/syncs/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Data Syncs</h1>
    
    <!-- Test Sync Section -->
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Test Sync Service</h3>
      </div>
      <div class="p-6">
        <p class="text-gray-700 mb-4">Run test syncs to verify the system is working correctly:</p>
        
        <div class="flex flex-wrap gap-2 mb-4">
          <%= button_to "Quick Test (10 items)", 
              admin_syncs_path(source: 'test', scenario: 'quick'),
              method: :post,
              class: "px-4 py-2 border border-blue-500 text-blue-500 rounded-md hover:bg-blue-50 transition-colors" %>
              
          <%= button_to "Normal Test (50 items)", 
              admin_syncs_path(source: 'test', scenario: 'normal'),
              method: :post,
              class: "px-4 py-2 border border-blue-500 text-blue-500 rounded-md hover:bg-blue-50 transition-colors" %>
              
          <%= button_to "Slow Test (100 items)", 
              admin_syncs_path(source: 'test', scenario: 'slow'),
              method: :post,
              class: "px-4 py-2 border border-yellow-500 text-yellow-600 rounded-md hover:bg-yellow-50 transition-colors" %>
              
          <%= button_to "Error Test", 
              admin_syncs_path(source: 'test', scenario: 'error_prone'),
              method: :post,
              class: "px-4 py-2 border border-red-500 text-red-500 rounded-md hover:bg-red-50 transition-colors" %>
              
          <%= button_to "Will Fail Test", 
              admin_syncs_path(source: 'test', scenario: 'will_fail'),
              method: :post,
              class: "px-4 py-2 border border-red-500 text-red-500 rounded-md hover:bg-red-50 transition-colors" %>
              
          <%= button_to "Unknown Count Test", 
              admin_syncs_path(source: 'test', scenario: 'unknown_count'),
              method: :post,
              class: "px-4 py-2 border border-cyan-500 text-cyan-600 rounded-md hover:bg-cyan-50 transition-colors" %>
        </div>
        
        <div class="text-sm text-gray-500 space-y-1">
          <div><span class="font-semibold">Quick:</span> 10 items, fast processing</div>
          <div><span class="font-semibold">Normal:</span> 50 items, 10% failure rate</div>
          <div><span class="font-semibold">Slow:</span> 100 items, slow processing</div>
          <div><span class="font-semibold">Error:</span> 20 items, 30% failure rate</div>
          <div><span class="font-semibold">Will Fail:</span> Crashes after 5 items</div>
          <div><span class="font-semibold">Unknown:</span> Random count, no progress bar</div>
        </div>
      </div>
    </div>
    
    <!-- Real Services -->
    <div class="bg-white rounded-lg shadow mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Production Services</h3>
      </div>
      <div class="p-6">
        <div class="flex flex-wrap gap-2">

          <% @available_sources.reject { |s| s == 'test' }.each do |source| %>
            <%= button_to "Sync #{source.titleize}", 
                admin_syncs_path(source: source),
                method: :post,
                class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
          <% end %>

            <%= button_to "Letterboxd RE-SYNC", 
                admin_syncs_path(source: 'letterboxd', resync_recent: true),
                method: :post,
                class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Syncs Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Recent Syncs</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Source
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Progress
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Stats
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Started
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Duration
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @sync_statuses.each do |sync| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= sync.source_type.titleize %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                           <%= sync.status == 'completed' ? 'bg-green-100 text-green-800' : 
                               sync.status == 'failed' ? 'bg-red-100 text-red-800' : 
                               sync.status == 'running' ? 'bg-yellow-100 text-yellow-800' : 
                               'bg-gray-100 text-gray-800' %>">
                  <%= sync.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if sync.has_progress? %>
                  <%= sync.processed_items %> / <%= sync.total_items %>
                <% else %>
                  <%= sync.processed_items %> items
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <span class="inline-flex gap-3">
                  <span>C: <span class="font-semibold text-green-600"><%= sync.created_count %></span></span>
                  <span>U: <span class="font-semibold text-blue-600"><%= sync.updated_count %></span></span>
                  <span>F: <span class="font-semibold text-red-600"><%= sync.failed_count %></span></span>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= sync.started_at&.strftime("%m/%d %H:%M") || "-" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if sync.started_at && sync.completed_at %>
                  <%= distance_of_time_in_words(sync.started_at, sync.completed_at) %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", admin_sync_path(sync), 
                    class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
