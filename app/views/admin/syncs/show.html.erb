<!-- app/views/admin/syncs/show.html.erb -->
<%= turbo_stream_from "sync_status_#{@sync_status.id}" %>
<%= turbo_stream_from "sync_status_#{@sync_status.id}_logs" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6 py-6">
    <h1 class="text-3xl font-bold text-gray-900">
      <%= @sync_status.source_type.titleize %> Sync
    </h1>
    <%= link_to "← Back to Syncs", admin_syncs_path, 
        class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition-colors" %>
  </div>

  <!-- Status Card -->
  <div id="sync_status_<%= @sync_status.id %>">
    <%= render 'status_detail', sync_status: @sync_status %>
  </div>

  <!-- Log Entries -->
  <div class="bg-white rounded-lg shadow mt-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Activity Log</h3>
    </div>
    <div class="p-6">
      <div class="bg-gray-50 rounded-lg p-4 max-h-[500px] overflow-y-auto font-mono text-sm">
        <div id="sync_log_entries">
          <%= render partial: 'log_entry', 
                     collection: @log_entries, 
                     as: :log_entry %>
        </div>
      </div>
    </div>
  </div>
</div>
