<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">S3 Upload Test</h3>
    <div class="mt-2 max-w-xl text-sm text-gray-500">
      <p>Test file upload to S3 and image processing capabilities.</p>
    </div>
    
    <%= form_with model: [:admin, @upload], url: admin_test_s3_path, local: true, class: "mt-5" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :file, class: "block text-sm font-medium text-gray-700" %>
          <%= form.file_field :file, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>
        
        <div>
          <%= form.submit "Upload File", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
    
    <% if Upload.any? %>
      <div class="mt-8">
        <h4 class="text-md font-medium text-gray-900 mb-4">Recent Uploads</h4>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% Upload.order(created_at: :desc).limit(6).each do |upload| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <% if upload.file.attached? %>
                <% if upload.file.image? %>
                  <%= image_tag upload.file.variant(resize_to_limit: [200, 200]), 
                      class: "w-full h-32 object-cover rounded mb-2" %>
                <% else %>
                  <div class="w-full h-32 bg-gray-200 rounded mb-2 flex items-center justify-center">
                    <span class="text-gray-500">ðŸ“„</span>
                  </div>
                <% end %>
                <p class="text-sm font-medium text-gray-900"><%= upload.title %></p>
                <p class="text-xs text-gray-500">
                  <%= upload.file.filename %> 
                  (<%= number_to_human_size(upload.file.byte_size) %>)
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
