<%# app/views/home/cards/_books_read_card.html.erb %>
<div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
  
  <div class="flex flex-col md:flex-row-reverse xl:flex-row">
    
    <!-- Cover Container - Natural aspect ratio with max-height constraint -->
    <div class="order-first 
                w-full md:w-auto
                flex-shrink-0 bg-gray-100">
      
      <% if readings&.first&.book %>
        <% book = readings.first.book %>
        
        <!-- Mobile and sm: Fixed height crop at top -->
        <div class="block md:hidden h-32 relative overflow-hidden">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: book.title %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center">
              <svg class="w-12 h-12 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- md and larger: Natural aspect ratio with max-height -->
        <div class="hidden md:block">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "block w-auto",
                          style: "height: 100%; max-height: 300px; max-width: 200px; min-width: 60px;",
                          alt: book.title %>
          <% else %>
            <!-- Fallback with default 2:3 ratio -->
            <div class="bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center"
                 style="aspect-ratio: 2/3; max-height: 300px; max-width: 200px;">
              <svg class="w-8 h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
      <% else %>
        <!-- No cover fallback -->
        <div class="h-32 md:block bg-gradient-to-br from-emerald-100 to-teal-200 
                    flex items-center justify-center"
             style="md:aspect-ratio: 2/3; md:max-height: 300px; md:max-width: 200px;">
          <svg class="w-12 h-12 md:w-8 md:h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container -->
    <div class="flex-grow flex flex-col p-4 lg:p-5 min-w-0">
      
      <!-- Header -->
      <div class="flex items-start justify-between mb-3 gap-3">
        <h2 class="text-lg md:text-xl font-bold text-gray-900">Recent Books Read</h2>
        <%= link_to "View all →", admin_books_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors whitespace-nowrap" %>
      </div>
      
      <!-- Books List -->
      <div class="flex-grow space-y-2">
        <% if readings&.any? %>
          <% readings.each do |reading| %>
            <div class="flex items-start gap-2 md:gap-3 text-sm">
              <!-- Date -->
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-14 md:w-16">
                <%= reading.finished_on.strftime("%b %d") %>
              </span>
              
              <!-- Book Details -->
              <div class="flex-grow min-w-0">
                <div class="flex items-start gap-2">
                  <div class="flex-grow min-w-0">
                    <p class="font-medium text-gray-900">
                      <span class="break-words"><%= reading.book.title %></span>
                      <% if reading.book.published_year.present? %>
                        <span class="font-normal text-gray-500 whitespace-nowrap">(<%= reading.book.published_year %>)</span>
                      <% end %>
                      <% if reading.book.author.present? %>
                        <span class="font-normal text-gray-500 text-xs block md:inline">· <%= reading.book.author %></span>
                      <% end %>
                    </p>
                  </div>
                  
                  <!-- Rating -->
                  <div class="flex-shrink-0">
                    <% rating = reading.rating || reading.book.rating %>
                    <% if rating.present? && rating > 0 %>
                      <div class="flex items-center gap-0.5" title="<%= rating %> stars">
                        <% full_stars = rating.floor %>
                        <% has_half_star = (rating % 1) >= 0.5 %>
                        <% empty_stars = 5 - full_stars - (has_half_star ? 1 : 0) %>
                        
                        <% full_stars.times do %>
                          <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                        
                        <% if has_half_star %>
                          <svg class="w-3 h-3 text-yellow-400" viewBox="0 0 20 20">
                            <defs>
                              <linearGradient id="half-book-<%= reading.id %>">
                                <stop offset="50%" stop-color="currentColor"/>
                                <stop offset="50%" stop-color="#e5e7eb"/>
                              </linearGradient>
                            </defs>
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z" 
                                  fill="url(#half-book-<%= reading.id %>)" stroke="currentColor" stroke-width="0.5"/>
                          </svg>
                        <% end %>
                        
                        <% empty_stars.times do %>
                          <svg class="w-3 h-3 text-gray-300 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-xs text-gray-400">—</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent books read</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-3 pt-3 border-t border-gray-200">
        <% if next_book %>
          <p class="text-sm text-gray-600">
            Next up: <span class="font-medium text-gray-900"><%= next_book.title %></span>
          </p>
        <% else %>
          <p class="text-sm text-gray-600">
            No books in want-to-read list
          </p>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
