<div class="bg-white rounded-lg shadow-lg overflow-hidden h-full flex flex-col">
  
  <!-- Mobile (xs): Image at top, full width, cropped height -->
  <!-- Desktop (sm): Image on right, xl: Image on left when side-by-side -->
  
  <div class="flex flex-col sm:flex-row-reverse xl:flex-row h-full">
    
    <!-- Cover Image Container -->
    <!-- xs: order-first full width, sm: right side, xl: left side -->
    <div class="order-first 
                w-full sm:w-2/5 lg:w-1/3 
                flex-shrink-0 bg-gray-100">
      
      <% if readings&.first&.book %>
        <% book = readings.first.book %>
        
        <!-- Mobile: Fixed height crop showing middle portion -->
        <div class="block sm:hidden h-32 relative overflow-hidden">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: book.title %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center">
              <svg class="w-12 h-12 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- Desktop: Full aspect ratio -->
        <div class="hidden sm:block relative h-full">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "w-full h-full object-cover object-center",
                          alt: book.title,
                          style: "aspect-ratio: 2/3;" %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center"
                 style="aspect-ratio: 2/3;">
              <svg class="w-16 h-16 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
      <% else %>
        <!-- No cover fallback -->
        <div class="h-32 sm:h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                    flex items-center justify-center">
          <svg class="w-12 h-12 sm:w-16 sm:h-16 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container -->
    <div class="flex-grow flex flex-col p-4 sm:p-5 lg:p-6">
      
      <!-- Header with title and link -->
      <div class="mb-4">
        <h2 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">Recent Books Read</h2>
        <%= link_to "View all â†’", admin_books_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors" %>
      </div>
      
      <!-- Books List -->
      <div class="flex-grow space-y-2 sm:space-y-2.5">
        <% if readings&.any? %>
          <% readings.each do |reading| %>
            <div class="flex items-start gap-3 text-sm">
              <!-- Date -->
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-16 sm:w-20">
                <%= reading.finished_on.strftime("%b %d") %>
              </span>
              
              <!-- Book Details -->
              <div class="flex-grow min-w-0">
                <p class="font-medium text-gray-900 truncate">
                  <%= reading.book.title %>
                  <% if reading.book.published_year.present? %>
                    <span class="font-normal text-gray-500">(<%= reading.book.published_year %>)</span>
                  <% end %>
                </p>
                
                <% if reading.book.author.present? %>
                  <p class="text-gray-600 text-xs mt-0.5 truncate">
                    by <%= reading.book.author %>
                  </p>
                <% end %>
              </div>
              
              <!-- Rating -->
              <div class="flex-shrink-0">
                <%= render 'shared/star_rating', rating: reading.rating || reading.book.rating %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent books read</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-4 pt-4 border-t border-gray-200">
        <% if next_book %>
          <p class="text-sm text-gray-600">
            Next up: <span class="font-medium text-gray-900"><%= next_book.title %></span>
          </p>
        <% else %>
          <p class="text-sm text-gray-600">
            No books in want-to-read list
          </p>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
