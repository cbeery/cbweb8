<%# app/views/home/cards/_books_read_card.html.erb %>
<div class="bg-white rounded-lg shadow-lg overflow-hidden h-full flex flex-col">
  
  <!-- Mobile (xs): Image at top, full width, cropped height -->
  <!-- Desktop (sm): Image on right, xl: Image on left when side-by-side -->
  
  <div class="flex flex-col sm:flex-row-reverse xl:flex-row h-full">
    
    <!-- Cover Image Container - MUCH NARROWER -->
    <!-- xs: full width top, sm: narrow side -->
    <div class="order-first 
                w-full sm:w-24 md:w-28 lg:w-32 
                flex-shrink-0 bg-gray-100">
      
      <% if readings&.first&.book %>
        <% book = readings.first.book %>
        
        <!-- Mobile: Fixed height crop showing middle portion -->
        <div class="block sm:hidden h-32 relative overflow-hidden">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: book.title %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center">
              <svg class="w-12 h-12 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- Desktop: Full aspect ratio but narrow width -->
        <div class="hidden sm:block relative h-full">
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image, 
                          class: "w-full h-auto object-cover object-center",
                          alt: book.title %>
          <% else %>
            <div class="w-full bg-gradient-to-br from-emerald-100 to-teal-200 
                        flex items-center justify-center"
                 style="aspect-ratio: 2/3;">
              <svg class="w-8 h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          <% end %>
        </div>
        
      <% else %>
        <!-- No cover fallback -->
        <div class="h-32 sm:h-full bg-gradient-to-br from-emerald-100 to-teal-200 
                    flex items-center justify-center">
          <svg class="w-12 h-12 sm:w-8 sm:h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container - Now has more space -->
    <div class="flex-grow flex flex-col p-4 sm:p-4 lg:p-5">
      
      <!-- Header with title and link -->
      <div class="mb-3">
        <h2 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">Recent Books Read</h2>
        <%= link_to "View all →", admin_books_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors" %>
      </div>
      
      <!-- Books List -->
      <div class="flex-grow space-y-2">
        <% if readings&.any? %>
          <% readings.each do |reading| %>
            <div class="flex items-start gap-2 sm:gap-3 text-sm">
              <!-- Date -->
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-14 sm:w-16">
                <%= reading.finished_on.strftime("%b %d") %>
              </span>
              
              <!-- Book Details -->
              <div class="flex-grow min-w-0">
                <div class="flex items-start gap-2">
                  <div class="flex-grow min-w-0">
                    <p class="font-medium text-gray-900">
                      <%= reading.book.title %>
                      <% if reading.book.published_year.present? %>
                        <span class="font-normal text-gray-500">(<%= reading.book.published_year %>)</span>
                      <% end %>
                    </p>
                    
                    <% if reading.book.author.present? %>
                      <p class="text-gray-600 text-xs mt-0.5">
                        by <%= reading.book.author %>
                      </p>
                    <% end %>
                  </div>
                  
                  <!-- Rating - moved inline with title for better space usage -->
                  <div class="flex-shrink-0">
                    <% rating = reading.rating || reading.book.rating %>
                    <% if rating.present? && rating > 0 %>
                      <div class="flex items-center gap-0.5" title="<%= rating %> stars">
                        <% full_stars = rating.floor %>
                        <% has_half_star = (rating % 1) >= 0.5 %>
                        <% empty_stars = 5 - full_stars - (has_half_star ? 1 : 0) %>
                        
                        <%# Full stars %>
                        <% full_stars.times do %>
                          <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                        
                        <%# Half star %>
                        <% if has_half_star %>
                          <svg class="w-3 h-3 text-yellow-400" viewBox="0 0 20 20">
                            <defs>
                              <linearGradient id="half-book-<%= reading.id %>">
                                <stop offset="50%" stop-color="currentColor"/>
                                <stop offset="50%" stop-color="#e5e7eb"/>
                              </linearGradient>
                            </defs>
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z" 
                                  fill="url(#half-book-<%= reading.id %>)" stroke="currentColor" stroke-width="0.5"/>
                          </svg>
                        <% end %>
                        
                        <%# Empty stars %>
                        <% empty_stars.times do %>
                          <svg class="w-3 h-3 text-gray-300 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-xs text-gray-400">—</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent books read</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-3 pt-3 border-t border-gray-200">
        <% if next_book %>
          <p class="text-sm text-gray-600">
            Next up: <span class="font-medium text-gray-900"><%= next_book.title %></span>
          </p>
        <% else %>
          <p class="text-sm text-gray-600">
            No books in want-to-read list
          </p>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
