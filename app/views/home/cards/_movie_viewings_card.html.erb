<%# app/views/home/cards/_movie_viewings_card.html.erb %>
<div class="bg-white rounded-lg shadow-lg overflow-hidden h-full flex flex-col">
  
  <div class="flex flex-col md:flex-row h-full">
    
    <!-- Poster Container - Natural aspect ratio, no forcing -->
    <div class="order-first md:order-first xl:order-first 
                w-full md:w-auto md:h-full
                flex-shrink-0 bg-gray-100">
      
      <% if viewings&.first&.movie&.movie_posters&.first %>
        <% poster = viewings.first.movie.movie_posters.first %>
        
        <!-- Mobile and sm: Fixed height crop at top -->
        <div class="block md:hidden h-32 relative overflow-hidden">
          <% if poster.image.attached? %>
            <%= image_tag poster.image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: viewings.first.movie.title %>
          <% elsif poster.url? %>
            <img src="<%= poster.url %>" 
                 class="absolute inset-0 w-full h-full object-cover object-center"
                 alt="<%= viewings.first.movie.title %>">
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300"></div>
          <% end %>
        </div>
        
        <!-- md and larger: Natural aspect ratio preservation -->
        <!-- Image fills height, width adjusts to maintain original aspect ratio -->
        <div class="hidden md:block h-full">
          <% if poster.image.attached? %>
            <%= image_tag poster.image, 
                          class: "block h-full w-auto",
                          style: "max-width: 200px; min-width: 60px;",
                          alt: viewings.first.movie.title %>
          <% elsif poster.url? %>
            <img src="<%= poster.url %>" 
                 class="block h-full w-auto"
                 style="max-width: 200px; min-width: 60px;"
                 alt="<%= viewings.first.movie.title %>">
          <% else %>
            <!-- Fallback with default 2:3 ratio -->
            <div class="h-full bg-gradient-to-br from-gray-200 to-gray-300"
                 style="aspect-ratio: 2/3; max-width: 200px;">
            </div>
          <% end %>
        </div>
        
      <% else %>
        <!-- No poster fallback with default 2:3 -->
        <div class="h-32 md:h-full bg-gradient-to-br from-indigo-100 to-blue-200 
                    flex items-center justify-center"
             style="md:aspect-ratio: 2/3; md:max-width: 200px;">
          <svg class="w-12 h-12 md:w-8 md:h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M7 4v16M17 4v16M3 8h4m10 0h4M3 16h4m10 0h4" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container - Adjusts to remaining space -->
    <div class="flex-grow flex flex-col p-4 lg:p-5 min-w-0">
      
      <!-- Header -->
      <div class="flex items-start justify-between mb-3 gap-3">
        <h2 class="text-lg md:text-xl font-bold text-gray-900">Recent Movie Viewings</h2>
        <%= link_to "View all →", admin_movies_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors whitespace-nowrap" %>
      </div>
      
      <!-- Viewings List -->
      <div class="flex-grow space-y-2">
        <% if viewings&.any? %>
          <% viewings.each do |viewing| %>
            <div class="flex items-start gap-2 md:gap-3 text-sm">
              <!-- Date -->
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-14 md:w-16">
                <%= viewing.viewed_on.strftime("%b %d") %>
              </span>
              
              <!-- Movie Details -->
              <div class="flex-grow min-w-0">
                <div class="flex items-start gap-2">
                  <div class="flex-grow min-w-0">
                    <p class="font-medium text-gray-900">
                      <span class="break-words"><%= viewing.movie.title %></span>
                      <% if viewing.movie.year.present? %>
                        <span class="font-normal text-gray-500 whitespace-nowrap">(<%= viewing.movie.year %>)</span>
                      <% end %>
                      <% if viewing.movie.director.present? %>
                        <span class="font-normal text-gray-500 text-xs block md:inline">· <%= viewing.movie.director %></span>
                      <% end %>
                    </p>
                  </div>
                  
                  <!-- Rating -->
                  <div class="flex-shrink-0">
                    <% if viewing.movie.rating.present? && viewing.movie.rating > 0 %>
                      <div class="flex items-center gap-0.5" title="<%= viewing.movie.rating %> stars">
                        <% full_stars = viewing.movie.rating.floor %>
                        <% has_half_star = (viewing.movie.rating % 1) >= 0.5 %>
                        <% empty_stars = 5 - full_stars - (has_half_star ? 1 : 0) %>
                        
                        <% full_stars.times do %>
                          <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                        
                        <% if has_half_star %>
                          <svg class="w-3 h-3 text-yellow-400" viewBox="0 0 20 20">
                            <defs>
                              <linearGradient id="half-<%= viewing.id %>">
                                <stop offset="50%" stop-color="currentColor"/>
                                <stop offset="50%" stop-color="#e5e7eb"/>
                              </linearGradient>
                            </defs>
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z" 
                                  fill="url(#half-<%= viewing.id %>)" stroke="currentColor" stroke-width="0.5"/>
                          </svg>
                        <% end %>
                        
                        <% empty_stars.times do %>
                          <svg class="w-3 h-3 text-gray-300 fill-current" viewBox="0 0 20 20">
                            <path d="M10 1l2.928 5.856 6.549.954-4.738 4.573 1.118 6.523L10 15.833l-5.857 3.073 1.118-6.523L.523 7.81l6.549-.954z"/>
                          </svg>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-xs text-gray-400">—</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent viewings</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-3 pt-3 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          <span class="font-medium text-gray-900"><%= movies_this_year %></span> 
          movies watched this year
        </p>
      </div>
      
    </div>
  </div>
</div>
