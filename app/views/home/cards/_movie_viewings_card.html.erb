<div class="bg-white rounded-lg shadow-lg overflow-hidden h-full flex flex-col">
  
  <!-- Mobile (xs): Image at top, full width, cropped height -->
  <!-- Desktop (sm+): Image on left, full aspect ratio -->
  
  <div class="flex flex-col sm:flex-row h-full">
    
    <!-- Poster Image Container -->
    <!-- xs: order-first full width, sm: left side (right side at xl with book flip) -->
    <div class="order-first sm:order-first xl:order-first 
                w-full sm:w-2/5 lg:w-1/3 
                flex-shrink-0 bg-gray-100">
      
      <% if viewings&.first&.movie&.movie_posters&.first %>
        <% poster = viewings.first.movie.movie_posters.first %>
        
        <!-- Mobile: Fixed height crop showing middle portion -->
        <div class="block sm:hidden h-32 relative overflow-hidden">
          <% if poster.image.attached? %>
            <%= image_tag poster.image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: viewings.first.movie.title %>
          <% elsif poster.url? %>
            <img src="<%= poster.url %>" 
                 class="absolute inset-0 w-full h-full object-cover object-center"
                 alt="<%= viewings.first.movie.title %>">
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300"></div>
          <% end %>
        </div>
        
        <!-- Desktop: Full aspect ratio -->
        <div class="hidden sm:block relative h-full">
          <% if poster.image.attached? %>
            <%= image_tag poster.image, 
                          class: "w-full h-full object-cover object-center",
                          alt: viewings.first.movie.title,
                          style: "aspect-ratio: 2/3;" %>
          <% elsif poster.url? %>
            <img src="<%= poster.url %>" 
                 class="w-full h-full object-cover object-center"
                 style="aspect-ratio: 2/3;"
                 alt="<%= viewings.first.movie.title %>">
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300" 
                 style="aspect-ratio: 2/3;"></div>
          <% end %>
        </div>
        
      <% else %>
        <!-- No poster fallback -->
        <div class="h-32 sm:h-full bg-gradient-to-br from-indigo-100 to-blue-200 
                    flex items-center justify-center">
          <svg class="w-12 h-12 sm:w-16 sm:h-16 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M7 4v16M17 4v16M3 8h4m10 0h4M3 16h4m10 0h4" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container -->
    <div class="flex-grow flex flex-col p-4 sm:p-5 lg:p-6">
      
      <!-- Header with title and link -->
      <div class="mb-4">
        <h2 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">Recent Movie Viewings</h2>
        <%= link_to "View all â†’", admin_movies_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors" %>
      </div>
      
      <!-- Viewings List -->
      <div class="flex-grow space-y-2 sm:space-y-2.5">
        <% if viewings&.any? %>
          <% viewings.each do |viewing| %>
            <div class="flex items-start gap-3 text-sm">
              <!-- Date -->
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-16 sm:w-20">
                <%= viewing.viewed_on.strftime("%b %d") %>
              </span>
              
              <!-- Movie Details -->
              <div class="flex-grow min-w-0">
                <p class="font-medium text-gray-900 truncate">
                  <%= viewing.movie.title %>
                  <% if viewing.movie.year.present? %>
                    <span class="font-normal text-gray-500">(<%= viewing.movie.year %>)</span>
                  <% end %>
                </p>
                
                <% if viewing.movie.director.present? %>
                  <p class="text-gray-600 text-xs mt-0.5 truncate">
                    dir. <%= viewing.movie.director %>
                  </p>
                <% end %>
              </div>
              
              <!-- Rating -->
              <div class="flex-shrink-0">
                <%= render 'shared/star_rating', rating: viewing.movie.rating %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent viewings</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-4 pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          <span class="font-medium text-gray-900"><%= movies_this_year %></span> 
          movies watched this year
        </p>
      </div>
      
    </div>
  </div>
</div>
