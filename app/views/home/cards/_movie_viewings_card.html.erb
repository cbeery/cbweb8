<%# app/views/home/cards/_movie_viewings_card.html.erb %>
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  
  <div class="flex flex-col md:flex-row">
    
    <!-- Poster Container - Fixed aspect ratio, crops image to fit -->
    <div class="relative bg-gray-100 flex-shrink-0">
      
      <% if viewings&.first&.movie&.movie_posters&.first %>
        <% poster = viewings.first.movie.movie_posters.first %>
        
        <!-- Mobile (xs, sm): Top image, cropped -->
        <div class="block md:hidden h-32 w-full relative overflow-hidden">
          <% if poster.image.attached? %>
            <%= image_tag poster.image, 
                          class: "absolute inset-0 w-full h-full object-cover object-center",
                          alt: viewings.first.movie.title %>
          <% elsif poster.url? %>
            <img src="<%= poster.url %>" 
                 class="absolute inset-0 w-full h-full object-cover object-center"
                 alt="<%= viewings.first.movie.title %>">
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300"></div>
          <% end %>
        </div>
        
        <!-- md+: Side image with fixed 2:3 container -->
        <div class="hidden md:block w-32 lg:w-36" style="aspect-ratio: 2/3;">
          <div class="relative w-full h-full overflow-hidden">
            <% if poster.image.attached? %>
              <%= image_tag poster.image, 
                            class: "absolute inset-0 w-full h-full object-cover object-center",
                            alt: viewings.first.movie.title %>
            <% elsif poster.url? %>
              <img src="<%= poster.url %>" 
                   class="absolute inset-0 w-full h-full object-cover object-center"
                   alt="<%= viewings.first.movie.title %>">
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300"></div>
            <% end %>
          </div>
        </div>
        
      <% else %>
        <!-- No poster fallback -->
        <div class="h-32 md:h-auto md:w-32 lg:w-36 bg-gradient-to-br from-indigo-100 to-blue-200 
                    flex items-center justify-center"
             style="md:aspect-ratio: 2/3;">
          <svg class="w-12 h-12 md:w-8 md:h-8 text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M7 4v16M17 4v16M3 8h4m10 0h4M3 16h4m10 0h4" />
          </svg>
        </div>
      <% end %>
    </div>
    
    <!-- Content Container -->
    <div class="flex-grow flex flex-col p-4 lg:p-5 min-w-0">
      
      <!-- Header -->
      <div class="flex items-start justify-between mb-3 gap-3">
        <h2 class="text-lg md:text-xl font-bold text-gray-900">Recent Movie Viewings</h2>
        <%= link_to "View all →", admin_movies_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors whitespace-nowrap" %>
      </div>
      
      <!-- Viewings List -->
      <div class="space-y-2">
        <% if viewings&.any? %>
          <% viewings.each do |viewing| %>
            <div class="flex items-start gap-2 md:gap-3 text-sm">
              <span class="text-gray-500 whitespace-nowrap flex-shrink-0 w-14 md:w-16">
                <%= viewing.viewed_on.strftime("%b %d") %>
              </span>
              
              <div class="flex-grow min-w-0">
                <div class="flex items-start gap-2">
                  <div class="flex-grow min-w-0">
                    <p class="font-medium text-gray-900">
                      <span class="break-words"><%= viewing.movie.title %></span>
                      <% if viewing.movie.year.present? %>
                        <span class="font-normal text-gray-500">(<%= viewing.movie.year %>)</span>
                      <% end %>
                      <% if viewing.movie.director.present? %>
                        <span class="font-normal text-gray-500 text-xs block md:inline">· <%= viewing.movie.director %></span>
                      <% end %>
                    </p>
                  </div>
                  
                  <div class="flex-shrink-0">
                    <%= render 'shared/star_rating', rating: viewing.movie.rating %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No recent viewings</p>
        <% end %>
      </div>
      
      <!-- Footer -->
      <div class="mt-auto pt-3 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          <span class="font-medium text-gray-900"><%= movies_this_year %></span> 
          movies watched this year
        </p>
      </div>
      
    </div>
  </div>
</div>
