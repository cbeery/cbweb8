<!-- app/views/home/index.html.erb -->
<% if user_signed_in? %>
  <p class="text-lg text-gray-600 mb-6">Welcome back, <%= current_user.display_name %>!</p>
<% end %>

<!-- Grid of cards inside main card -->
<div class="grid grid-cols-1 gap-4 sm:gap-6 md:grid-cols-2 lg:grid-cols-3">
  
  <!-- Recent Movies Card -->
  <div class="col-span-1 md:col-span-2 lg:col-span-2 bg-gray-50 rounded-lg shadow-sm border border-gray-100 p-4 sm:p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Movies Watched</h2>
    
    <% if @recent_movies&.any? %>
      <div class="space-y-3">
        <% @recent_movies.each do |movie| %>
          <div class="bg-white rounded-lg p-3 sm:p-4 shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
              <!-- Poster -->
              <div class="flex-shrink-0 mx-auto sm:mx-0">
                <% poster = movie.movie_posters.first %>
                <% if poster&.image&.attached? %>
                  <%= image_tag poster.image,
                      alt: movie.title,
                      class: "w-24 h-36 sm:w-16 sm:h-24 object-cover rounded shadow-sm" %>
                <% else %>
                  <div class="w-24 h-36 sm:w-16 sm:h-24 bg-gray-200 rounded flex items-center justify-center">
                    <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% end %>
              </div>
              
              <!-- Movie Info -->
              <div class="flex-1 text-center sm:text-left">
                <h3 class="font-medium text-gray-900 mb-1">
                  <%= movie.title %>
                  <% if movie.year %>
                    <span class="text-sm text-gray-500">(<%= movie.year %>)</span>
                  <% end %>
                </h3>
                
                <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 text-sm">
                  <div class="flex items-center justify-center sm:justify-start gap-1">
                    <span class="text-gray-500">Watched:</span>
                    <span class="text-gray-700"><%= movie.last_viewed_date&.strftime("%b %d, %Y") %></span>
                  </div>
                  
                  <% if movie.rating %>
                    <div class="flex items-center justify-center sm:justify-start gap-1">
                      <span class="text-yellow-500">â˜…</span>
                      <span class="text-gray-700"><%= movie.rating %>/5</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No movies watched yet</p>
    <% end %>
  </div>
  
  <!-- Stats Card -->
  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg shadow-sm border border-blue-100 p-4 sm:p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h2>
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Total Movies</span>
        <span class="font-bold text-gray-900"><%= Movie.count %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Total Viewings</span>
        <span class="font-bold text-gray-900"><%= Viewing.count %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Users</span>
        <span class="font-bold text-gray-900"><%= User.count %></span>
      </div>
    </div>
  </div>
  
  <!-- Navigation Card -->
  <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg shadow-sm border border-green-100 p-4 sm:p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Test Layouts</h2>
    <div class="grid grid-cols-2 gap-2">
      <%= link_to "Movies 1", home_test1_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
      <%= link_to "Movies 2", home_test2_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
      <%= link_to "Movies 3", home_test3_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
      <%= link_to "Mixed 1", home_test4_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
      <%= link_to "Mixed 2", home_test5_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
      <%= link_to "Mixed 3", home_test6_path, 
          class: "px-3 py-2 bg-white hover:bg-green-50 rounded text-xs text-gray-700 hover:text-green-700 transition-colors text-center" %>
    </div>
  </div>
  
  <!-- Activity Feed Card -->
  <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg shadow-sm border border-purple-100 p-4 sm:p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h2>
    <div class="space-y-2 text-sm">
      <% recent_viewings = Viewing.includes(:movie).order(created_at: :desc).limit(3) %>
      <% if recent_viewings.any? %>
        <% recent_viewings.each do |viewing| %>
          <div class="py-2 border-b border-purple-100 last:border-0">
            <p class="text-gray-700">
              Watched <span class="font-medium"><%= viewing.movie.title %></span>
            </p>
            <p class="text-xs text-gray-500"><%= viewing.viewed_on.strftime("%B %d") %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">No recent activity</p>
      <% end %>
    </div>
  </div>
</div>