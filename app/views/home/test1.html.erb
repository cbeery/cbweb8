<!-- app/views/home/test1.html.erb -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Test Layout 1</h2>
    <p class="text-sm text-gray-500 mt-1">Grid layout with movie cards</p>
  </div>
  <div class="mt-4 sm:mt-0">
    <%= link_to "← Back to Home", root_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
  </div>
</div>

<!-- Two-column layout on larger screens -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  
  <!-- Main content area (2 columns wide on lg) -->
  <div class="lg:col-span-2 space-y-6">
    
    <!-- Recent Movies Card with horizontal layout -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        Recently Watched
      </h3>
      
      <% if @recent_movies&.any? %>
        <div class="space-y-4">
          <% @recent_movies.each do |movie| %>
            <div class="group relative bg-gray-50 hover:bg-gray-100 rounded-lg p-3 transition-all duration-200">
              <div class="flex gap-4">
                <!-- Poster on the left -->
                <div class="flex-shrink-0">
                  <% poster = movie.movie_posters.first %>
                  <% if poster&.image&.attached? %>
                    <%= image_tag poster.image,
                        alt: movie.title,
                        class: "w-20 h-28 object-cover rounded shadow-md group-hover:shadow-lg transition-shadow" %>
                  <% else %>
                    <div class="w-20 h-28 bg-gray-300 rounded shadow-md flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <!-- Movie details -->
                <div class="flex-1 min-w-0">
                  <h4 class="font-semibold text-gray-900 truncate">
                    <%= movie.title %>
                  </h4>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= movie.year || "Year unknown" %>
                  </p>
                  
                  <div class="flex flex-wrap items-center gap-3 mt-2 text-sm">
                    <span class="inline-flex items-center text-gray-600">
                      <svg class="w-4 h-4 mr-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                      </svg>
                      <%= movie.last_watched&.strftime("%b %d, %Y") %>
                    </span>
                    
                    <% if movie.rating %>
                      <span class="inline-flex items-center">
                        <% (1..5).each do |i| %>
                          <svg class="w-4 h-4 <%= i <= movie.rating ? 'text-yellow-400' : 'text-gray-300' %>" 
                               fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No movies watched yet</p>
      <% end %>
    </div>
    
    <!-- Top Rated Movies Grid -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Top Rated
      </h3>
      
      <% if @top_rated&.any? %>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
          <% @top_rated.each do |movie| %>
            <div class="group cursor-pointer">
              <div class="aspect-[2/3] rounded-lg overflow-hidden bg-gray-200 shadow-md group-hover:shadow-xl transition-shadow">
                <% poster = movie.movie_posters.first %>
                <% if poster&.image&.attached? %>
                  <%= image_tag poster.image,
                      alt: movie.title,
                      class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="mt-2">
                <p class="text-sm font-medium text-gray-900 truncate"><%= movie.title %></p>
                <p class="text-xs text-gray-500">★ <%= movie.rating %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No rated movies yet</p>
      <% end %>
    </div>
  </div>
  
  <!-- Sidebar (1 column wide on lg) -->
  <div class="space-y-6">
    <!-- Quick Stats Card -->
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl shadow-sm p-4 sm:p-6 text-white">
      <h3 class="text-lg font-semibold mb-4">Statistics</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-indigo-100">Total Movies</span>
          <span class="text-xl font-bold"><%= Movie.count %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-indigo-100">Viewings</span>
          <span class="text-xl font-bold"><%= Viewing.count %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-indigo-100">Avg Rating</span>
          <span class="text-xl font-bold">
            <%= Movie.where.not(rating: nil).average(:rating)&.round(2) || "N/A" %>
          </span>
        </div>
      </div>
    </div>
    
    <!-- Navigation Links -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Other Layouts</h3>
      <div class="space-y-2">
        <%= link_to home_test2_path, class: "block px-4 py-2 bg-gray-50 hover:bg-indigo-50 rounded-lg text-gray-700 hover:text-indigo-700 transition-colors" do %>
          <span class="font-medium">Test Layout 2</span>
          <p class="text-xs text-gray-500 mt-1">Masonry-style grid</p>
        <% end %>
        <%= link_to home_test3_path, class: "block px-4 py-2 bg-gray-50 hover:bg-indigo-50 rounded-lg text-gray-700 hover:text-indigo-700 transition-colors" do %>
          <span class="font-medium">Test Layout 3</span>
          <p class="text-xs text-gray-500 mt-1">Dashboard with stats</p>
        <% end %>
      </div>
    </div>
  </div>
</div>