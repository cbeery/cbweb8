<!-- app/views/home/test18.html.erb -->
<!-- Alternative 6: Compact Table/List with Tiny Thumbnails -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Dashboard - Table with Micro Thumbnails</h1>
    <div class="flex gap-3 text-sm">
      <%= link_to "â† Test 16", home_test16_path, class: "text-indigo-600 hover:text-indigo-800" %>
      <%= link_to "Test 17", home_test17_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>

  <!-- Main Grid Container -->
  <div class="grid grid-cols-12 gap-6 xl:gap-8">
    
    <!-- Recent Movies - Table with Tiny Thumbnails -->
    <div class="col-span-12 xl:col-span-6">
      <div class="bg-white rounded-lg shadow-lg">
        <div class="p-4 border-b">
          <h2 class="text-xl font-bold">Recent Movies</h2>
        </div>
        
        <div class="divide-y">
          <% @recent_viewings.each do |viewing| %>
            <div class="p-3 hover:bg-gray-50 transition-colors">
              <div class="flex items-center gap-3">
                <!-- Date badge -->
                <div class="text-center flex-shrink-0">
                  <div class="text-xs text-gray-500"><%= viewing.viewed_on.strftime("%b") %></div>
                  <div class="text-lg font-bold"><%= viewing.viewed_on.day %></div>
                </div>
                
                <!-- Tiny thumbnail - fixed 24px height won't affect row height -->
                <div class="flex-shrink-0">
                  <% if viewing.movie.movie_posters.first %>
                    <% poster = viewing.movie.movie_posters.first %>
                    <% if poster.image.attached? %>
                      <%= image_tag poster.image, 
                                    class: "w-4 h-6 object-cover rounded",
                                    alt: "",
                                    title: viewing.movie.title %>
                    <% elsif poster.url? %>
                      <img src="<%= poster.url %>" 
                           class="w-4 h-6 object-cover rounded"
                           alt=""
                           title="<%= viewing.movie.title %>">
                    <% else %>
                      <div class="w-4 h-6 bg-gradient-to-b from-purple-200 to-pink-200 rounded"></div>
                    <% end %>
                  <% else %>
                    <div class="w-4 h-6 bg-gradient-to-b from-gray-200 to-gray-300 rounded"></div>
                  <% end %>
                </div>
                
                <!-- Movie info -->
                <div class="flex-grow min-w-0">
                  <p class="font-medium truncate">
                    <%= viewing.movie.title %>
                    <% if viewing.movie.year %>
                      <span class="font-normal text-gray-500">(<%= viewing.movie.year %>)</span>
                    <% end %>
                  </p>
                  <% if viewing.movie.director.present? %>
                    <p class="text-xs text-gray-500"><%= viewing.movie.director %></p>
                  <% end %>
                </div>
                
                <!-- Rating -->
                <div class="flex-shrink-0 hidden sm:block">
                  <% if viewing.movie.rating %>
                    <%= render 'shared/star_rating', rating: viewing.movie.rating %>
                  <% end %>
                </div>
                
                <!-- Mobile rating -->
                <div class="flex-shrink-0 sm:hidden">
                  <% if viewing.movie.rating %>
                    <span class="text-sm font-medium text-yellow-600">
                      <%= viewing.movie.rating %>/5
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="p-4 border-t text-sm text-gray-600">
          <%= @movies_this_year %> movies watched this year
        </div>
      </div>
    </div>
    
    <!-- Recent Books - Table with Tiny Thumbnails -->
    <div class="col-span-12 xl:col-span-6">
      <div class="bg-white rounded-lg shadow-lg">
        <div class="p-4 border-b">
          <h2 class="text-xl font-bold">Recent Books</h2>
        </div>
        
        <div class="divide-y">
          <% @recent_readings.each do |reading| %>
            <div class="p-3 hover:bg-gray-50 transition-colors">
              <div class="flex items-center gap-3">
                <!-- Date badge -->
                <div class="text-center flex-shrink-0">
                  <div class="text-xs text-gray-500"><%= reading.finished_on.strftime("%b") %></div>
                  <div class="text-lg font-bold"><%= reading.finished_on.day %></div>
                </div>
                
                <!-- Tiny thumbnail - fixed 24px height won't affect row height -->
                <div class="flex-shrink-0">
                  <% if reading.book.cover_image.attached? %>
                    <%= image_tag reading.book.cover_image, 
                                  class: "w-4 h-6 object-cover rounded",
                                  alt: "",
                                  title: reading.book.title %>
                  <% else %>
                    <div class="w-4 h-6 bg-gradient-to-b from-emerald-200 to-teal-200 rounded"></div>
                  <% end %>
                </div>
                
                <!-- Book info -->
                <div class="flex-grow min-w-0">
                  <p class="font-medium truncate">
                    <%= reading.book.title %>
                    <% if reading.book.published_year %>
                      <span class="font-normal text-gray-500">(<%= reading.book.published_year %>)</span>
                    <% end %>
                  </p>
                  <% if reading.book.author.present? %>
                    <p class="text-xs text-gray-500"><%= reading.book.author %></p>
                  <% end %>
                </div>
                
                <!-- Rating -->
                <div class="flex-shrink-0 hidden sm:block">
                  <% rating = reading.rating || reading.book.rating %>
                  <% if rating %>
                    <%= render 'shared/star_rating', rating: rating %>
                  <% end %>
                </div>
                
                <!-- Mobile rating -->
                <div class="flex-shrink-0 sm:hidden">
                  <% rating = reading.rating || reading.book.rating %>
                  <% if rating %>
                    <span class="text-sm font-medium text-yellow-600">
                      <%= rating %>/5
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="p-4 border-t text-sm text-gray-600">
          <%= @books_this_year %> books read this year
        </div>
      </div>
    </div>
    
  </div>
</div>
