<!-- app/views/home/test2.html.erb -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Test Layout 2</h2>
    <p class="text-sm text-gray-500 mt-1">Masonry-style grid with movie cards</p>
  </div>
  <div class="mt-4 sm:mt-0 flex gap-3">
    <%= link_to "Test 1", home_test1_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "Test 3", home_test3_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "← Home", root_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
  </div>
</div>

<!-- Masonry Grid -->
<div class="columns-1 sm:columns-2 lg:columns-3 xl:columns-4 gap-4 space-y-4">
  
  <% if @all_movies&.any? %>
    <% @all_movies.each_with_index do |movie, index| %>
      <% card_heights = ['h-64', 'h-72', 'h-80', 'h-96'] %>
      <% card_colors = [
        'from-blue-50 to-indigo-50 border-blue-200',
        'from-purple-50 to-pink-50 border-purple-200',
        'from-green-50 to-emerald-50 border-green-200',
        'from-yellow-50 to-orange-50 border-yellow-200',
        'from-red-50 to-rose-50 border-red-200'
      ] %>
      
      <div class="break-inside-avoid mb-4">
        <div class="bg-gradient-to-br <%= card_colors[index % card_colors.length] %> rounded-xl shadow-sm border p-4 hover:shadow-lg transition-shadow duration-200">
          
          <!-- Movie Poster and Info -->
          <div class="flex flex-col">
            <% poster = movie.movie_posters.first %>
            
            <!-- Poster or placeholder -->
            <div class="relative mb-3 <%= ['', 'h-48', 'h-56', 'h-64'][index % 4] %> rounded-lg overflow-hidden bg-white/50">
              <% if poster&.image&.attached? %>
                <%= image_tag poster.image,
                    alt: movie.title,
                    class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gray-100">
                  <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
              
              <!-- Rating overlay -->
              <% if movie.rating %>
                <div class="absolute top-2 right-2 bg-black/70 text-white px-2 py-1 rounded-md text-sm font-medium">
                  ★ <%= movie.rating %>
                </div>
              <% end %>
            </div>
            
            <!-- Movie details -->
            <div>
              <h3 class="font-semibold text-gray-900 mb-1 line-clamp-2">
                <%= movie.title %>
              </h3>
              
              <% if movie.year %>
                <p class="text-sm text-gray-600 mb-2"><%= movie.year %></p>
              <% end %>
              
              <!-- Viewing info -->
              <% recent_viewing = movie.viewings.order(viewed_on: :desc).first %>
              <% if recent_viewing %>
                <div class="text-xs text-gray-500 space-y-1">
                  <p class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                    </svg>
                    <%= recent_viewing.viewed_on.strftime("%B %d, %Y") %>
                  </p>
                  
                  <% if movie.viewings.count > 1 %>
                    <p class="flex items-center">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      Watched <%= pluralize(movie.viewings.count, 'time') %>
                    </p>
                  <% end %>
                  
                  <% if recent_viewing.rewatch %>
                    <span class="inline-block px-2 py-0.5 bg-white/70 rounded text-xs">Rewatch</span>
                  <% end %>
                </div>
              <% end %>
              
              <!-- Director if available -->
              <% if movie.director.present? %>
                <p class="text-xs text-gray-500 mt-2 pt-2 border-t border-gray-200/50">
                  Directed by <%= movie.director %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-full">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 text-center">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
        </svg>
        <p class="text-gray-500">No movies to display</p>
      </div>
    </div>
  <% end %>
</div>

<!-- Float Action Button -->
<div class="fixed bottom-6 right-6 sm:bottom-8 sm:right-8">
  <div class="bg-indigo-600 hover:bg-indigo-700 text-white rounded-full shadow-lg p-4 cursor-pointer transition-colors">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
  </div>
</div>