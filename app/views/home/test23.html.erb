<!-- app/views/home/test23.html.erb -->
<!-- Alternative: Dense tabular view with alternating row colors -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Dashboard - Dense Table View</h1>
    <div class="flex gap-3 text-sm">
      <%= link_to "← Test 22", home_test22_path, class: "text-indigo-600 hover:text-indigo-800" %>
      <%= link_to "Test 24 →", home_test24_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>

  <!-- Main Grid Container -->
  <div class="grid grid-cols-12 gap-6 xl:gap-8">
    
    <!-- Movies Card - Dense Table -->
    <div class="col-span-12 xl:col-span-6">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-purple-600 to-indigo-600 p-3">
          <h2 class="text-lg font-bold text-white">Movies</h2>
        </div>
        
        <!-- Dense Table -->
        <div>
          <% @recent_viewings.each_with_index do |viewing, index| %>
            <div class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> px-2 py-1.5 hover:bg-indigo-50 transition-colors group">
              <div class="flex items-center">
                
                <!-- Micro thumbnail -->
                <div class="flex-shrink-0 mr-2">
                  <% if viewing.movie.movie_poster %>
                    <% poster = viewing.movie.movie_poster %>
                    <% if poster.image.attached? %>
                      <%= image_tag poster.image, 
                                    class: "w-4 h-6 object-cover rounded",
                                    alt: "",
                                    loading: "lazy" %>
                    <% elsif poster.url? %>
                      <img src="<%= poster.url %>" 
                           class="w-4 h-6 object-cover rounded"
                           alt=""
                           loading="lazy">
                    <% else %>
                      <div class="w-4 h-6 bg-gradient-to-b from-purple-300 to-indigo-300 rounded"></div>
                    <% end %>
                  <% else %>
                    <div class="w-4 h-6 bg-gray-300 rounded"></div>
                  <% end %>
                </div>
                
                <!-- Ultra-compact date -->
                <div class="flex-shrink-0 w-8 text-center mr-1.5 text-xs">
                  <div class="text-gray-400 leading-none text-[10px]"><%= viewing.viewed_on.strftime("%b") %></div>
                  <div class="font-bold leading-none"><%= viewing.viewed_on.day %></div>
                </div>
                
                <!-- Movie info - very compact -->
                <div class="flex-grow min-w-0">
                  <div class="flex items-center">
                    <p class="text-xs font-medium truncate leading-none">
                      <%= viewing.movie.title %>
                      <% if viewing.movie.year %>
                        <span class="font-normal text-gray-500">(<%= viewing.movie.year %>)</span>
                      <% end %>
                    </p>
                    <!-- Location dot indicator -->
                    <span class="ml-1.5 w-1.5 h-1.5 rounded-full flex-shrink-0 <%= viewing.location == 'theater' ? 'bg-red-400' : 'bg-blue-400' %>" 
                          title="<%= viewing.location == 'theater' ? 'Theater' : 'Home' %>"></span>
                  </div>
                  <% if viewing.movie.director.present? %>
                    <p class="text-[10px] text-gray-500 leading-none mt-0.5 truncate"><%= viewing.movie.director %></p>
                  <% end %>
                </div>
                
                <!-- Inline rating -->
                <div class="flex-shrink-0 ml-2">
                  <% if viewing.movie.rating %>
                    <div class="flex items-center bg-yellow-100 rounded px-1 py-0.5 group-hover:bg-yellow-200">
                      <span class="text-yellow-600 text-xs leading-none">★</span>
                      <span class="text-xs font-medium text-gray-700 leading-none ml-0.5"><%= viewing.movie.rating %></span>
                    </div>
                  <% else %>
                    <span class="text-xs text-gray-300">—</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Compact Footer -->
        <div class="bg-gray-900 text-white px-3 py-2 flex justify-between items-center">
          <p class="text-xs">
            <span class="font-bold text-yellow-400"><%= @movies_this_year %></span> this year
          </p>
          <%= link_to "View all →", admin_movies_path, class: "text-xs text-yellow-400 hover:text-yellow-300" %>
        </div>
      </div>
    </div>
    
    <!-- Books Card - Dense Table -->
    <div class="col-span-12 xl:col-span-6">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-emerald-600 to-teal-600 p-3">
          <h2 class="text-lg font-bold text-white">Books</h2>
        </div>
        
        <!-- Dense Table -->
        <div>
          <% @recent_readings.each_with_index do |reading, index| %>
            <div class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> px-2 py-1.5 hover:bg-emerald-50 transition-colors group">
              <div class="flex items-center">
                
                <!-- Micro thumbnail -->
                <div class="flex-shrink-0 mr-2">
                  <% if reading.book.cover_image.attached? %>
                    <%= image_tag reading.book.cover_image, 
                                  class: "w-4 h-6 object-cover rounded",
                                  alt: "",
                                  loading: "lazy" %>
                  <% else %>
                    <div class="w-4 h-6 bg-gradient-to-b from-emerald-300 to-teal-300 rounded"></div>
                  <% end %>
                </div>
                
                <!-- Ultra-compact date -->
                <div class="flex-shrink-0 w-8 text-center mr-1.5 text-xs">
                  <div class="text-gray-400 leading-none text-[10px]"><%= reading.finished_on.strftime("%b") %></div>
                  <div class="font-bold leading-none"><%= reading.finished_on.day %></div>
                </div>
                
                <!-- Book info - very compact -->
                <div class="flex-grow min-w-0">
                  <p class="text-xs font-medium truncate leading-none">
                    <%= reading.book.title %>
                    <% if reading.book.published_year %>
                      <span class="font-normal text-gray-500">(<%= reading.book.published_year %>)</span>
                    <% end %>
                  </p>
                  <% if reading.book.author.present? %>
                    <p class="text-[10px] text-gray-500 leading-none mt-0.5 truncate"><%= reading.book.author %></p>
                  <% end %>
                </div>
                
                <!-- Inline rating -->
                <div class="flex-shrink-0 ml-2">
                  <% rating = reading.rating || reading.book.rating %>
                  <% if rating %>
                    <div class="flex items-center bg-yellow-100 rounded px-1 py-0.5 group-hover:bg-yellow-200">
                      <span class="text-yellow-600 text-xs leading-none">★</span>
                      <span class="text-xs font-medium text-gray-700 leading-none ml-0.5"><%= rating %></span>
                    </div>
                  <% else %>
                    <span class="text-xs text-gray-300">—</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Compact Footer -->
        <div class="bg-gray-900 text-white px-3 py-2 flex justify-between items-center">
          <p class="text-xs">
            <span class="font-bold text-yellow-400"><%= @books_this_year %></span> this year
          </p>
          <%= link_to "View all →", admin_books_path, class: "text-xs text-yellow-400 hover:text-yellow-300" %>
        </div>
      </div>
    </div>
    
  </div>
</div>
