            <%= image_tag @last_movie_poster.image,
                alt: @recent_movies.first.title,
                class: "w-24 h-36 object-cover rounded-lg shadow-md" %>
          </div>
        <% end %>
        
        <!-- Movie list -->
        <div class="space-y-2">
