<!-- app/views/home/test5.html.erb -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Welcome Back</h2>
    <p class="text-sm text-gray-500 mt-1">Here's what you've been up to lately</p>
  </div>
  <div class="mt-4 sm:mt-0 flex gap-3">
    <%= link_to "Test 4", home_test4_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "Test 6", home_test6_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "← Home", root_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
  </div>
</div>

<!-- Hero Section with Featured Content -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  
  <!-- Hero Card - Takes up 2 columns on large screens -->
  <div class="lg:col-span-2">
    <div class="bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-xl shadow-lg overflow-hidden">
      <div class="p-6 sm:p-8 text-white">
        <h3 class="text-2xl font-bold mb-2">Your Year in Review</h3>
        <p class="text-indigo-100 mb-6">A snapshot of your creative journey</p>
        
        <!-- Stats Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
          <div class="bg-white/20 backdrop-blur rounded-lg p-3 text-center">
            <p class="text-3xl font-bold"><%= Movie.count %></p>
            <p class="text-xs text-indigo-100">Movies</p>
          </div>
          <div class="bg-white/20 backdrop-blur rounded-lg p-3 text-center">
            <p class="text-3xl font-bold">847</p>
            <p class="text-xs text-indigo-100">Songs</p>
          </div>
          <div class="bg-white/20 backdrop-blur rounded-lg p-3 text-center">
            <p class="text-3xl font-bold">23</p>
            <p class="text-xs text-indigo-100">Books</p>
          </div>
          <div class="bg-white/20 backdrop-blur rounded-lg p-3 text-center">
            <p class="text-3xl font-bold">156</p>
            <p class="text-xs text-indigo-100">Activities</p>
          </div>
        </div>
        
        <div class="mt-6 flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-white/20 backdrop-blur rounded-full text-xs">🎬 Film Buff</span>
          <span class="px-3 py-1 bg-white/20 backdrop-blur rounded-full text-xs">🎵 Music Lover</span>
          <span class="px-3 py-1 bg-white/20 backdrop-blur rounded-full text-xs">📚 Bookworm</span>
          <span class="px-3 py-1 bg-white/20 backdrop-blur rounded-full text-xs">🚴 Cyclist</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Stats Sidebar -->
  <div class="space-y-4">
    <!-- Current Streak -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
      <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-semibold text-gray-900">Current Streak</h4>
        <span class="text-2xl">🔥</span>
      </div>
      <p class="text-3xl font-bold text-gray-900">14 days</p>
      <p class="text-xs text-gray-500 mt-1">Keep it going!</p>
      
      <div class="mt-3 grid grid-cols-7 gap-1">
        <% 14.times do |i| %>
          <div class="aspect-square bg-orange-400 rounded-sm"></div>
        <% end %>
        <% 7.times do %>
          <div class="aspect-square bg-gray-100 rounded-sm"></div>
        <% end %>
      </div>
    </div>
    
    <!-- Weather Widget -->
    <div class="bg-gradient-to-br from-blue-400 to-blue-500 rounded-xl shadow-sm p-4 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-2xl font-bold">72°F</p>
          <p class="text-xs text-blue-100">Denver, CO</p>
        </div>
        <svg class="w-12 h-12 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
        </svg>
      </div>
      <p class="text-xs text-blue-100 mt-2">Perfect day for a bike ride!</p>
    </div>
  </div>
</div>

<!-- Content Cards Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-6">
  
  <!-- Movies Card - Spans 2 columns with full-bleed poster -->
  <div class="md:col-span-2 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
    <div class="flex h-40">
      <% if @recent_movies&.any? && @last_movie_poster&.image&.attached? %>
        <!-- Full-bleed poster on left -->
        <div class="w-28 sm:w-32 flex-shrink-0">
          <%= image_tag @last_movie_poster.image,
              alt: @recent_movies.first.title,
              class: "w-full h-full object-cover" %>
        </div>
      <% elsif @recent_movies&.any? %>
        <!-- Placeholder if no poster -->
        <div class="w-28 sm:w-32 flex-shrink-0 bg-gray-200 flex items-center justify-center">
          <svg class="w-10 h-10 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
          </svg>
        </div>
      <% end %>
      
      <!-- Content -->
      <div class="flex-1 p-4 flex flex-col">
        <div class="flex items-center justify-between mb-2">
          <h4 class="text-sm font-semibold text-gray-900">Movies</h4>
          <%= link_to "View all →", "#", class: "text-purple-600 hover:text-purple-700 text-xs" %>
        </div>
        
        <% if @recent_movies&.any? %>
          <!-- Compact list -->
          <div class="flex-1 space-y-1 text-xs">
            <% @recent_movies.first(4).each do |movie| %>
              <div class="flex justify-between items-center">
                <p class="text-gray-700 truncate flex-1 font-medium"><%= movie.title %></p>
                <% if movie.rating %>
                  <span class="text-yellow-500 ml-1">★<%= movie.rating %></span>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <p class="text-xs text-gray-500 mt-3 pt-2 border-t">
            <%= Movie.count %> movies • <%= Viewing.count %> views
          </p>
        <% else %>
          <p class="text-gray-500 text-xs text-center py-4">No movies yet</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Music Card - Compact -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
    <div class="flex items-center justify-between mb-3">
      <h4 class="text-sm font-semibold text-gray-900 flex items-center">
        <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
        Music
      </h4>
      <%= link_to "→", "#", class: "text-gray-400 hover:text-gray-600" %>
    </div>
    
    <!-- Mini album art -->
    <div class="mb-3 flex justify-center">
      <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-blue-400 rounded shadow-sm flex items-center justify-center">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
        </svg>
      </div>
    </div>
    
    <div class="space-y-1 text-xs">
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">Flowers</p>
        <span class="text-gray-400">3:21</span>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">Anti-Hero</p>
        <span class="text-gray-400">3:20</span>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">As It Was</p>
        <span class="text-gray-400">2:47</span>
      </div>
    </div>
    
    <p class="text-xs text-gray-500 mt-3 text-center">
      1,247 plays this month
    </p>
  </div>
  
  <!-- Books Card - Compact -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
    <div class="flex items-center justify-between mb-3">
      <h4 class="text-sm font-semibold text-gray-900 flex items-center">
        <div class="w-2 h-2 bg-amber-500 rounded-full mr-2"></div>
        Books
      </h4>
      <%= link_to "→", "#", class: "text-gray-400 hover:text-gray-600" %>
    </div>
    
    <!-- Mini book cover -->
    <div class="mb-3 flex justify-center">
      <div class="w-16 h-24 bg-gradient-to-br from-amber-400 to-orange-500 rounded shadow-sm flex items-center justify-center p-2">
        <p class="text-white text-center text-xs font-bold">Atomic Habits</p>
      </div>
    </div>
    
    <div class="space-y-1 text-xs">
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">Atomic Habits</p>
        <span class="text-amber-600">45%</span>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">Sapiens</p>
        <span class="text-green-600">✓</span>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-gray-700 truncate flex-1">Dune</p>
        <span class="text-green-600">✓</span>
      </div>
    </div>
    
    <p class="text-xs text-gray-500 mt-3 text-center">
      23/30 books goal
    </p>
  </div>
  
  <!-- Bottom row - spans full width -->
  <div class="md:col-span-2 lg:col-span-4 grid grid-cols-2 sm:grid-cols-4 gap-4">
    <!-- Fitness Card - Compact -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-semibold text-gray-900 flex items-center">
          <div class="w-2 h-2 bg-red-500 rounded-full mr-2"></div>
          Fitness
        </h4>
        <%= link_to "→", "#", class: "text-gray-400 hover:text-gray-600" %>
      </div>
      
      <!-- Mini activity chart -->
      <div class="mb-3">
        <div class="flex items-end justify-center gap-1" style="height: 60px;">
          <div class="w-3 bg-red-400 rounded-t" style="height: 40%;"></div>
          <div class="w-3 bg-red-400 rounded-t" style="height: 70%;"></div>
          <div class="w-3 bg-red-400 rounded-t" style="height: 50%;"></div>
          <div class="w-3 bg-red-400 rounded-t" style="height: 90%;"></div>
          <div class="w-3 bg-red-400 rounded-t" style="height: 60%;"></div>
          <div class="w-3 bg-red-400 rounded-t" style="height: 80%;"></div>
          <div class="w-3 bg-red-500 rounded-t" style="height: 100%;"></div>
        </div>
        <p class="text-xs text-gray-400 text-center mt-1">This week</p>
      </div>
      
      <div class="space-y-1 text-xs">
        <div class="flex justify-between items-center">
          <p class="text-gray-700">Today</p>
          <span class="font-medium">32.1 km</span>
        </div>
        <div class="flex justify-between items-center">
          <p class="text-gray-700">Week</p>
          <span class="font-medium">145 km</span>
        </div>
      </div>
    </div>
    
    <!-- GitHub Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-semibold text-gray-900 flex items-center">
          <div class="w-2 h-2 bg-gray-700 rounded-full mr-2"></div>
          Code
        </h4>
        <%= link_to "→", "#", class: "text-gray-400 hover:text-gray-600" %>
      </div>
      
      <div class="text-center mb-2">
        <p class="text-2xl font-bold text-gray-900">12</p>
        <p class="text-xs text-gray-500">commits</p>
      </div>
      
      <!-- Mini contribution graph -->
      <div class="grid grid-cols-7 gap-0.5">
        <% 14.times do |i| %>
          <% intensity = ['bg-gray-100', 'bg-green-200', 'bg-green-300', 'bg-green-400', 'bg-green-500'] %>
          <div class="aspect-square <%= intensity[rand(5)] %> rounded-sm"></div>
        <% end %>
      </div>
    </div>
    
    <!-- Bookmarks Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
      <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-semibold text-gray-900 flex items-center">
          <div class="w-2 h-2 bg-blue-500 rounded-full mr-2"></div>
          Links
        </h4>
        <%= link_to "→", "#", class: "text-gray-400 hover:text-gray-600" %>
      </div>
      
      <div class="text-center mb-2">
        <p class="text-2xl font-bold text-gray-900">487</p>
        <p class="text-xs text-gray-500">bookmarks</p>
      </div>
      
      <div class="flex flex-wrap gap-1 justify-center">
        <span class="px-1.5 py-0.5 bg-blue-100 text-blue-700 text-xs rounded">dev</span>
        <span class="px-1.5 py-0.5 bg-blue-100 text-blue-700 text-xs rounded">design</span>
        <span class="px-1.5 py-0.5 bg-blue-100 text-blue-700 text-xs rounded">tools</span>
      </div>
    </div>
    
    <!-- Weather Widget -->
    <div class="bg-gradient-to-br from-sky-400 to-blue-500 rounded-lg shadow-sm p-4 text-white">
      <div class="text-center">
        <svg class="w-8 h-8 text-yellow-300 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
        </svg>
        <p class="text-2xl font-bold">72°</p>
        <p class="text-xs opacity-90">Sunny</p>
      </div>
    </div>
  </div>
</div>

