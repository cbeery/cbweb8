<!-- app/views/home/test9.html.erb -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-3xl font-bold text-gray-900">Life & Culture</h2>
    <p class="text-sm text-gray-500 mt-1">Your personal magazine • <%= Date.current.strftime("%B %Y") %></p>
  </div>
  <div class="mt-4 sm:mt-0 flex gap-3">
    <%= link_to "Feed", home_test7_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "Grid", home_test8_path, class: "text-gray-600 hover:text-gray-800 text-sm" %>
    <%= link_to "← Home", root_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
  </div>
</div>

<!-- Magazine Layout -->
<div class="space-y-8">
  
  <!-- Featured Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Featured Movie Card - Editorial Style -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <% if @recent_movies&.any? %>
        <div class="aspect-video relative">
          <% if @last_movie_poster&.image&.attached? %>
            <%= image_tag @last_movie_poster.image,
                alt: @recent_movies.first.title,
                class: "w-full h-full object-cover" %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
          <% else %>
            <div class="w-full h-full bg-gray-300 flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-gray-800/80 via-gray-800/20 to-transparent"></div>
          <% end %>
          
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <span class="inline-block px-3 py-1 bg-purple-600 text-xs font-bold uppercase tracking-wider rounded-full mb-3">Featured Film</span>
            <h3 class="text-2xl font-bold mb-2"><%= @recent_movies.first.title %></h3>
            <div class="flex items-center gap-4 text-sm">
              <% if @recent_movies.first.rating %>
                <span class="flex items-center gap-1">
                  <span class="text-yellow-400">★</span>
                  <%= @recent_movies.first.rating %>/5
                </span>
              <% end %>
              <span>Watched <%= @recent_movies.first.last_watched&.strftime("%B %d") %></span>
            </div>
          </div>
        </div>
        
        <div class="p-6">
          <p class="text-gray-600 mb-4">Your cinematic journey continues with a carefully curated selection of films that span genres and decades.</p>
          
          <div class="border-t pt-4">
            <h4 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-3">Recently Watched</h4>
            <div class="space-y-2">
              <% @recent_movies[1..4].each do |movie| %>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-900 font-medium"><%= movie.title %></span>
                  <div class="flex items-center gap-3">
                    <% if movie.rating %>
                      <span class="text-yellow-500">★ <%= movie.rating %></span>
                    <% end %>
                    <span class="text-gray-400 text-xs"><%= movie.last_watched&.strftime("%b %d") %></span>
                  </div>
                </div>
              <% end %>
            </div>
            
            <%= link_to "View Full Collection →", "#", class: "inline-block mt-4 text-purple-600 hover:text-purple-700 text-sm font-medium" %>
          </div>
        </div>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-gray-500">Start watching movies to see them featured here</p>
        </div>
      <% end %>
    </div>
    
    <!-- Featured Activity - Editorial Style -->
    <div class="bg-gradient-to-br from-red-500 to-orange-600 rounded-2xl shadow-lg p-8 text-white">
      <span class="inline-block px-3 py-1 bg-white/20 text-xs font-bold uppercase tracking-wider rounded-full mb-6">Today's Achievement</span>
      
      <h3 class="text-3xl font-bold mb-4">Personal Best</h3>
      <p class="text-xl text-red-100 mb-8">You've crushed your cycling goal with an impressive morning ride through the mountains.</p>
      
      <div class="grid grid-cols-3 gap-4 mb-8">
        <div class="text-center">
          <p class="text-3xl font-bold">42.3</p>
          <p class="text-xs text-red-200 uppercase tracking-wider">kilometers</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-bold">1:47</p>
          <p class="text-xs text-red-200 uppercase tracking-wider">duration</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-bold">892</p>
          <p class="text-xs text-red-200 uppercase tracking-wider">calories</p>
        </div>
      </div>
      
      <div class="h-24 bg-white/20 rounded-lg relative overflow-hidden">
        <svg class="absolute inset-0 w-full h-full p-4" viewBox="0 0 400 100">
          <path d="M0,50 Q100,20 200,45 T400,30" stroke="white" stroke-width="2" fill="none" opacity="0.7"/>
        </svg>
      </div>
      
      <%= link_to "View on Strava →", "#", class: "inline-block mt-6 px-6 py-2 bg-white text-red-600 rounded-full text-sm font-bold hover:bg-red-50 transition-colors" %>
    </div>
  </div>
  
  <!-- Mid Section - Three Column Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Reading Corner -->
    <div class="bg-amber-50 rounded-2xl shadow-sm border border-amber-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="inline-block px-3 py-1 bg-amber-600 text-white text-xs font-bold uppercase tracking-wider rounded-full">Reading</span>
        <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
        </svg>
      </div>
      
      <div class="w-full h-32 bg-gradient-to-br from-amber-600 to-orange-700 rounded-lg mb-4 flex items-center justify-center text-white p-4">
        <div class="text-center">
          <p class="text-sm font-bold">The Creative Act</p>
          <div class="w-12 h-px bg-white/50 mx-auto my-2"></div>
          <p class="text-xs opacity-80">Rick Rubin</p>
        </div>
      </div>
      
      <h4 class="font-bold text-gray-900 mb-2">Currently Reading</h4>
      <p class="text-sm text-gray-600 mb-3">Chapter 4: The Source of Creativity</p>
      
      <div class="mb-3">
        <div class="flex justify-between text-xs text-gray-600 mb-1">
          <span>Progress</span>
          <span class="font-bold">57%</span>
        </div>
        <div class="h-2 bg-amber-200 rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-amber-500 to-orange-500 rounded-full" style="width: 57%;"></div>
        </div>
      </div>
      
      <p class="text-xs text-gray-500">23 books read • 77% of yearly goal</p>
    </div>
    
    <!-- Music Pulse -->
    <div class="bg-green-50 rounded-2xl shadow-sm border border-green-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="inline-block px-3 py-1 bg-green-600 text-white text-xs font-bold uppercase tracking-wider rounded-full">Music</span>
        <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
        </svg>
      </div>
      
      <div class="space-y-3 mb-4">
        <div class="flex items-center gap-2">
          <div class="w-2 h-8 bg-green-400 rounded"></div>
          <div class="w-2 h-12 bg-green-500 rounded"></div>
          <div class="w-2 h-6 bg-green-400 rounded"></div>
          <div class="w-2 h-10 bg-green-500 rounded"></div>
          <div class="w-2 h-8 bg-green-400 rounded"></div>
          <div class="w-2 h-14 bg-green-600 rounded"></div>
          <div class="w-2 h-10 bg-green-500 rounded"></div>
          <div class="w-2 h-6 bg-green-400 rounded"></div>
        </div>
      </div>
      
      <h4 class="font-bold text-gray-900 mb-2">Your Soundtrack</h4>
      <div class="space-y-1 text-xs">
        <div class="flex justify-between">
          <span class="text-gray-700">Flowers - Miley Cyrus</span>
          <span class="text-gray-400">23 plays</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-700">Anti-Hero - Taylor Swift</span>
          <span class="text-gray-400">18 plays</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-700">As It Was - Harry Styles</span>
          <span class="text-gray-400">15 plays</span>
        </div>
      </div>
      
      <p class="text-xs text-gray-500 mt-3">1,247 songs this month</p>
    </div>
    
    <!-- Collections -->
    <div class="bg-blue-50 rounded-2xl shadow-sm border border-blue-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="inline-block px-3 py-1 bg-blue-600 text-white text-xs font-bold uppercase tracking-wider rounded-full">Collections</span>
        <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
        </svg>
      </div>
      
      <div class="grid grid-cols-2 gap-2 mb-4">
        <div class="aspect-square bg-gradient-to-br from-blue-400 to-indigo-500 rounded-lg"></div>
        <div class="aspect-square bg-gradient-to-br from-purple-400 to-pink-500 rounded-lg"></div>
        <div class="aspect-square bg-gradient-to-br from-green-400 to-teal-500 rounded-lg"></div>
        <div class="aspect-square bg-gradient-to-br from-yellow-400 to-orange-500 rounded-lg"></div>
      </div>
      
      <h4 class="font-bold text-gray-900 mb-2">Curated Links</h4>
      <p class="text-sm text-gray-600 mb-3">487 bookmarks across 23 categories</p>
      
      <div class="flex flex-wrap gap-1">
        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-full">Design</span>
        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-full">Code</span>
        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-full">Articles</span>
      </div>
    </div>
  </div>
  
  <!-- Bottom Feature - Full Width -->
  <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl shadow-lg p-8 text-white">
    <div class="max-w-4xl mx-auto text-center">
      <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur text-sm font-bold uppercase tracking-wider rounded-full mb-6">Year in Review</span>
      
      <h3 class="text-4xl font-bold mb-4">Your Creative Journey</h3>
      <p class="text-xl text-purple-100 mb-8 max-w-2xl mx-auto">A year of discovery, growth, and countless moments of inspiration across all your passions.</p>
      
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 mb-8">
        <div>
          <p class="text-4xl font-bold mb-1"><%= Movie.count %></p>
          <p class="text-sm text-purple-200">Films Watched</p>
        </div>
        <div>
          <p class="text-4xl font-bold mb-1">12,847</p>
          <p class="text-sm text-purple-200">Songs Played</p>
        </div>
        <div>
          <p class="text-4xl font-bold mb-1">23</p>
          <p class="text-sm text-purple-200">Books Read</p>
        </div>
        <div>
          <p class="text-4xl font-bold mb-1">2,156</p>
          <p class="text-sm text-purple-200">km Traveled</p>
        </div>
      </div>
      
      <%= link_to "Generate Full Report →", "#", class: "inline-block px-8 py-3 bg-white text-purple-600 rounded-full font-bold hover:bg-purple-50 transition-colors" %>
    </div>
  </div>
</div>

<!-- Footer Navigation -->
<div class="mt-8 flex justify-center gap-2">
  <% (1..9).each do |i| %>
    <%= link_to i,
        send("home_test#{i}_path"),
        class: "w-8 h-8 rounded-lg flex items-center justify-center text-sm font-medium #{i == 9 ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-600 hover:bg-gray-300'}" %>
  <% end %>
</div>