<!DOCTYPE html>
<html class="h-full bg-gray-100">
  <head>
    <title>Admin - <%= content_for(:title) || "curt.beery.co" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <!-- Inter font -->
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
  </head>

  <body class="h-full">
    <div class="min-h-full">
      <!-- Admin Header with Nav Trigger -->
      <header class="mb-4">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="py-2 flex justify-end">
            <button 
              id="admin-nav-trigger"
              class="group flex items-center space-x-1 hover:opacity-70 transition-opacity duration-200"
              aria-label="Open admin navigation"
            >
              <h1 class="text-sm font-medium text-gray-600">Admin Panel</h1>
              <svg class="w-3 h-3 text-gray-500 transition-transform duration-200 group-hover:scale-110" 
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </header>

      <!-- Full-screen Admin Navigation Overlay -->
      <nav 
        id="admin-nav-overlay" 
        class="fixed inset-0 z-50 backdrop-blur-sm transform -translate-y-full transition-transform duration-300 ease-in-out"
        style="display: none; background-color: rgba(55, 65, 81, 0.95);"
      >
        <div class="min-h-full flex flex-col">
          <!-- Navigation Header -->
          <div class="flex items-center justify-between p-6 border-b border-gray-600">
            <h2 class="text-xl font-semibold text-white">Admin Navigation</h2>
            <button 
              id="admin-nav-close" 
              class="p-2 rounded-md hover:bg-gray-600 transition-colors duration-200"
              aria-label="Close admin navigation"
            >
              <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <!-- Navigation Content -->
          <div class="flex-1 p-6">
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 max-w-4xl">
              
              <!-- Admin Tools Section -->
              <div>
                <h3 class="text-lg font-medium text-white mb-4">Admin Tools</h3>
                <nav class="space-y-3">
                  <%= link_to admin_root_path, class: "block text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    Dashboard
                  <% end %>
                  
                  <%= link_to admin_test_s3_path, class: "block text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    S3 Test
                  <% end %>
                  
                  <%= link_to admin_test_job_path, class: "block text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    Job Test
                  <% end %>
                  
                  <%= link_to mission_control_jobs.root_path, class: "block text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    Jobs Monitor
                  <% end %>
                </nav>
              </div>

              <!-- Account Section -->
              <div>
                <h3 class="text-lg font-medium text-white mb-4">Account</h3>
                <nav class="space-y-3">
                  <div class="px-3 py-2 text-sm text-gray-300 bg-gray-600 rounded-md">
                    Hi, <%= current_user.display_name %>
                  </div>
                  
                  <%= link_to root_path, class: "block text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    Main Site
                  <% end %>
                  
                  <%= button_to destroy_user_session_path, method: :delete, 
                      class: "w-full text-left text-gray-300 hover:text-white hover:bg-gray-600 px-3 py-2 rounded-md transition-colors duration-200" do %>
                    Sign Out
                  <% end %>
                </nav>
              </div>

              <!-- System Section -->
              <div>
                <h3 class="text-lg font-medium text-white mb-4">System</h3>
                <nav class="space-y-3">
                  <a href="#" class="block text-gray-400 px-3 py-2 rounded-md">
                    More tools coming...
                  </a>
                </nav>
              </div>
            </div>
          </div>

          <!-- Navigation Footer -->
          <div class="border-t border-gray-600 p-6">
            <p class="text-sm text-gray-400">
              Press <kbd class="px-2 py-1 bg-gray-600 rounded text-xs text-gray-300">ESC</kbd> to close or 
              <kbd class="px-2 py-1 bg-gray-600 rounded text-xs text-gray-300">Cmd/Ctrl + K</kbd> to open
            </p>
          </div>
        </div>
      </nav>

      <!-- Flash messages -->
      <% if notice.present? || alert.present? %>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-4">
          <% if notice.present? %>
            <div class="rounded-md bg-green-50 p-4 mb-4">
              <p class="text-sm font-medium text-green-800"><%= notice %></p>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="rounded-md bg-red-50 p-4">
              <p class="text-sm font-medium text-red-800"><%= alert %></p>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Main content wrapped in card -->
      <main>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="overflow-hidden bg-white shadow-xl sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <%= yield %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Admin Navigation JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const navTrigger = document.getElementById('admin-nav-trigger');
        const navOverlay = document.getElementById('admin-nav-overlay');
        const navClose = document.getElementById('admin-nav-close');

        function openNav() {
          navOverlay.style.display = 'block';
          // Force a reflow before adding the class
          navOverlay.offsetHeight;
          navOverlay.classList.remove('-translate-y-full');
          navOverlay.classList.add('translate-y-0');
          document.body.style.overflow = 'hidden';
        }

        function closeNav() {
          navOverlay.classList.remove('translate-y-0');
          navOverlay.classList.add('-translate-y-full');
          document.body.style.overflow = '';
          
          // Hide the overlay after animation completes
          setTimeout(() => {
            navOverlay.style.display = 'none';
          }, 300);
        }

        // Event listeners
        navTrigger.addEventListener('click', openNav);
        navClose.addEventListener('click', closeNav);

        // Close on escape key
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && navOverlay.style.display !== 'none') {
            closeNav();
          }
        });

        // Open on Cmd/Ctrl + K
        document.addEventListener('keydown', function(e) {
          if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
            e.preventDefault();
            if (navOverlay.style.display === 'none') {
              openNav();
            } else {
              closeNav();
            }
          }
        });

        // Close when clicking outside nav content
        navOverlay.addEventListener('click', function(e) {
          if (e.target === navOverlay) {
            closeNav();
          }
        });
      });
    </script>
  </body>
</html>